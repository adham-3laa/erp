<Page x:Class="EduGate.Views.Orders.SalesRepOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:EduGate.Views.Orders"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <local:OrdersTopBar x:Name="TopBar"/>

        <!-- جدول الطلبات -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Padding="8">

            <DataGrid x:Name="OrdersGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      HeadersVisibility="Column"

                      SelectionUnit="CellOrRowHeader"
                      SelectionMode="Extended"
                      ClipboardCopyMode="ExcludeHeader">

                <!-- كليك يمين → نسخ -->
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="نسخ"
                                  Command="ApplicationCommands.Copy"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>

                    <!-- رقم الطلب -->
                    <DataGridTextColumn Header="رقم الطلب"
                                        Binding="{Binding id}"
                                        Width="2*"/>

                    <!-- العميل -->
                    <DataGridTextColumn Header="العميل (ID)"
                                        Binding="{Binding customerid}"
                                        Width="*"/>

                    <!-- المندوب -->
                    <DataGridTextColumn Header="المندوب (ID)"
                                        Binding="{Binding salesrepid}"
                                        Width="*"/>

                    <!-- الإجمالي -->
                    <DataGridTextColumn Header="الإجمالي"
                                        Binding="{Binding TotalAmountDisplay}"
                                        Width="*"/>

                    <!-- العمولة -->
                    <DataGridTextColumn Header="العمولة"
                                        Binding="{Binding commissionamount}"
                                        Width="*"/>

                    <!-- الحالة -->
                    <DataGridTextColumn Header="الحالة"
                                        Binding="{Binding status}"
                                        Width="*"/>

                    <!-- التاريخ -->
                    <DataGridTextColumn Header="تاريخ الإنشاء"
                                        Binding="{Binding CreatedAt}"
                                        Width="*"/>

                    <!-- اعتماد (زر صغير) -->
                    <DataGridTemplateColumn Header="اعتماد"
                                            Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✔"
                                        Width="32"
                                        Height="28"
                                        FontSize="14"
                                        Padding="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DarkButtonStyle}"
                                        Click="Approve_Click"
                                        ToolTip="اعتماد الطلب"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Pagination Placeholder -->
        <TextBlock Grid.Row="2"
                   Text="صفحة 1"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
    </Grid>
</Page>
