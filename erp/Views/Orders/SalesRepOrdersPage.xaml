<Page x:Class="EduGate.Views.Orders.SalesRepOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:EduGate.Views.Orders">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:OrdersTopBar x:Name="TopBar"/>

        <DataGrid Grid.Row="1"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          ColumnWidth="*"
          HorizontalAlignment="Stretch"
          HorizontalContentAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الطلب" Binding="{Binding OrderId}"/>
                <DataGridTextColumn Header="العميل" Binding="{Binding CustomerName}"/>
                <DataGridTextColumn Header="المندوب" Binding="{Binding SalesRepName}"/>
                <DataGridTextColumn Header="الإجمالي" Binding="{Binding Total}"/>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date}"/>

                <DataGridTemplateColumn Header="تأكيد">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✅"
                                    Style="{StaticResource DarkButtonStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2"
                   Text="صفحة 1 من 10"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
    </Grid>
</Page>
