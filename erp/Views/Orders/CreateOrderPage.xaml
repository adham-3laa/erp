<Page x:Class="EduGate.Views.Orders.CreateOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:EduGate.Views.Orders"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="20" MinWidth="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <local:OrdersTopBar x:Name="OrdersTopBarControl"
                            Grid.Row="0"/>

        <Border Grid.Row="1"
                Style="{StaticResource GlowGradientFrame}"
                HorizontalAlignment="Center"
                Width="720">

            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="إنشاء طلب جديد"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,16"/>

                    <!-- كود العميل -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="كود العميل"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,4"/>
                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox x:Name="CustomerCodeTextBox"
                                         Height="36"
                                         Padding="8"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Style="{StaticResource GlowTextBox}"/>
                            </Border>
                        </Border>
                    </StackPanel>

                    <!-- اسم المنتج -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock Text="اسم المنتج"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,4"/>
                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox x:Name="ProductNameTextBox"
                                         Height="36"
                                         Padding="8"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Style="{StaticResource GlowTextBox}"/>
                            </Border>
                        </Border>
                    </StackPanel>

                    <!-- الكمية -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,16">
                        <TextBlock Text="الكمية"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,4"/>
                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox x:Name="QuantityTextBox"
                                         Height="36"
                                         Padding="8"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         TextAlignment="Left"
                                         FlowDirection="LeftToRight"
                                         Style="{StaticResource GlowTextBox}"
                                         PreviewTextInput="Quantity_PreviewTextInput"/>
                            </Border>
                        </Border>
                    </StackPanel>

                    <!-- زر الحفظ -->
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0">
                        <Button Content="تأكيد الطلب"
                                MinWidth="140"
                                Height="40"
                                FontSize="14"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="ConfirmOrder_Click"/>
                    </StackPanel>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
