<Page x:Class="erp.Views.Orders.CreateOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:erp.Views.Orders"
      Background="{StaticResource PageBgBrush}">

      xmlns:local="clr-namespace:EduGate.Views.Orders"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <!-- لو الـ OrdersTopBar في نفس المشروع خلاص سيب xmlns زي ما هو.
         لو مش ظاهر، جرّب: xmlns:local="clr-namespace:EduGate.Views.Orders;assembly=erp" -->

    <Page.Resources>

        <!-- ===== Glow (same design we agreed on) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Outer Frame (same as AddExpensePage) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24" MinWidth="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TopBar -->
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
        </Grid.RowDefinitions>

        <!-- ✅ TopBar (لازم موجود عشان الكود بيستخدم OrdersTopBarControl) -->
        <local:OrdersTopBar x:Name="OrdersTopBarControl"
                            Grid.Row="0"/>

        <!-- ================= Header ================= -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Center: page title -->
            <TextBlock Grid.Column="1"
                       Text="إنشاء طلب جديد"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <Border Grid.Column="2" Width="1" Opacity="0"/>
        </Grid>

        <!-- ================= Form ================= -->
        <Border Grid.Row="2"
                Style="{StaticResource GlowingTableOuterBorder}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border Style="{StaticResource InnerCardContainer}">
                <StackPanel>

            <Border Style="{StaticResource InnerCardContainer}"
                    Width="620"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">


                <StackPanel>


                    <!-- اسم العميل -->
                    <TextBlock Text="اسم العميل"/>
                    <TextBox x:Name="CustomerNameTextBox"
                             Height="36"
                             Margin="0,0,0,12"/>

                    <!-- اسم المندوب -->
                    <TextBlock Text="اسم المندوب"/>
                    <TextBox x:Name="SalesRepNameTextBox"
                             Height="36"
                             Margin="0,0,0,12"/>

                    <!-- العمولة -->
                    <TextBlock Text="نسبة العمولة (%)"/>
                    <TextBox x:Name="CommissionTextBox"
                             Height="36"
                             PreviewTextInput="NumberOnly"
                             Margin="0,0,0,16"/>

                    <!-- المنتجات -->
                    <TextBlock Text="المنتجات"/>
                    <DataGrid x:Name="ItemsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              Height="200"
                              Margin="0,8,0,16">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المنتج"
                                                Binding="{Binding productname}"
                                                Width="*"/>

                            <DataGridTextColumn Header="الكمية"
                                                Binding="{Binding quantity}"
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- زر الحفظ -->
                    <Button Content="تأكيد الطلب"
                            Height="40"
                            HorizontalAlignment="Right"
                            Width="160"
                            Click="ConfirmOrder_Click"/>
                </StackPanel>
=======
                    <!-- كود العميل -->
                    <TextBlock Text="كود العميل"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox x:Name="CustomerCodeTextBox"
                                     Height="36"
                                     Padding="8"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>
                    </Border>

                    <!-- اسم المنتج -->
                    <TextBlock Text="اسم المنتج"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,20,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox x:Name="ProductNameTextBox"
                                     Height="36"
                                     Padding="8"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>
                    </Border>

                    <!-- الكمية -->
                    <TextBlock Text="الكمية"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,20,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox x:Name="QuantityTextBox"
                                     Height="36"
                                     Padding="8"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Left"
                                     FlowDirection="LeftToRight"
                                     Style="{StaticResource GlowTextBox}"
                                     PreviewTextInput="Quantity_PreviewTextInput"/>
                        </Border>
                    </Border>

                    <!-- زر التأكيد -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,32,0,0">

                        <Button Content="تأكيد الطلب"
                                MinWidth="140"
                                Height="40"
                                FontSize="14"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="ConfirmOrder_Click"/>
                    </StackPanel>

                </StackPanel>

            </Border>
        </Border>

    </Grid>
</Page>
