<Page x:Class="erp.Views.Orders.ApprovedOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:erp.Views.Orders"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Page.Resources>

        <!-- ===== Gradient Shadow ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.30"/>

        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          BlurRadius="20"
                          ShadowDepth="4"
                          Opacity="0.08"/>

        <!-- ===== Table Card with Gradient Border ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Indigo700}" Offset="0"/>
                        <GradientStop Color="{StaticResource Purple600}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource Indigo600}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ===== DataGrid ===== -->
        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFBFC"/>
        </Style>

        <!-- Header with Gradient -->
        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="{StaticResource Indigo700}" Offset="0"/>
                        <GradientStop Color="{StaticResource Purple700}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
        </Style>

        <!-- Row with Hover -->
        <Style x:Key="NiceDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F3FF"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FAFBFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cell -->
        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                    <Setter Property="Foreground" Value="{StaticResource TextDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text -->
        <Style x:Key="CenteredTextColumnElementStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Refresh Button -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Padding="18,10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Indigo700}" Offset="0"/>
                                    <GradientStop Color="{StaticResource Purple700}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource Indigo700}"
                                                  BlurRadius="10"
                                                  ShadowDepth="3"
                                                  Opacity="0.25"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource Indigo600}" Offset="0"/>
                                            <GradientStop Color="{StaticResource Purple600}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Error Banner -->
        <Style x:Key="ErrorBannerStyle" TargetType="Border">
            <Setter Property="Background" Value="#FEF2F2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <!-- Empty State -->
        <Style x:Key="EmptyStateStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <local:OrdersTopBar x:Name="OrdersTopBarControl"
                            Grid.Row="0"/>

        <!-- ================= Header ================= -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title with Gradient -->
            <StackPanel>
                <TextBlock FontSize="28" FontWeight="Bold">
                    <TextBlock.Text>📋 الطلبات المعتمدة</TextBlock.Text>
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="{StaticResource Indigo700}" Offset="0"/>
                            <GradientStop Color="{StaticResource Purple600}" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <TextBlock x:Name="OrdersCountText"
                           Text="جاري تحميل الطلبات..."
                           FontSize="14"
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Refresh Button -->
            <Button Grid.Column="1"
                    Content="🔄 تحديث"
                    Style="{StaticResource RefreshButtonStyle}"
                    Click="RefreshButton_Click"/>
        </Grid>

        <!-- ================= Error Banner ================= -->
        <Border x:Name="ErrorBanner"
                Grid.Row="2"
                Style="{StaticResource ErrorBannerStyle}"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="❌" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="ErrorText"
                           Grid.Column="1"
                           FontSize="14"
                           Foreground="#DC2626"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
                <Button Grid.Column="2"
                        Content="✕"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#DC2626"
                        FontSize="16"
                        Cursor="Hand"
                        Click="CloseError_Click"/>
            </Grid>
        </Border>

        <!-- ================= Table Section ================= -->
        <Grid Grid.Row="3" Margin="0,20,0,0">

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Background="#99FFFFFF"
                    CornerRadius="18"
                    Visibility="Collapsed"
                    Panel.ZIndex="100">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Border Width="60"
                            Height="60"
                            CornerRadius="30"
                            Background="White"
                            Effect="{StaticResource CardShadow}">
                        <TextBlock Text="⏳"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="جاري تحميل الطلبات..."
                               FontSize="16"
                               Foreground="{StaticResource TextDarkBrush}"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>

            <!-- Empty State -->
            <Border x:Name="EmptyState"
                    Style="{StaticResource EmptyStateStyle}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📭" FontSize="56" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock x:Name="EmptyStateTitle"
                               Text="لا توجد طلبات معتمدة"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextDarkBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="EmptyStateSubtitle"
                               Text="سيتم عرض الطلبات هنا بعد اعتمادها"
                               FontSize="14"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Table Card -->
            <Border x:Name="TableCard"
                    Style="{StaticResource GlowingTableOuterBorder}">

                <DataGrid x:Name="OrdersDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Style="{StaticResource NiceDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
                          RowStyle="{StaticResource NiceDataGridRowStyle}"
                          CellStyle="{StaticResource NiceDataGridCellStyle}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          AlternationCount="2"
                          EnableRowVirtualization="True">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="رقم الطلب"
                                            Binding="{Binding code}"
                                            Width="100"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="العميل"
                                            Binding="{Binding CustomerName}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="المندوب"
                                            Binding="{Binding SalesRepName}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="الإجمالي"
                                            Binding="{Binding TotalAmountDisplay}"
                                            Width="120"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="العمولة"
                                            Binding="{Binding commissionamount, StringFormat={}{0:N2} ج.م}"
                                            Width="110"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <!-- Status with Badge -->
                        <DataGridTemplateColumn Header="الحالة" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8"
                                            Padding="12,5"
                                            HorizontalAlignment="Center"
                                            Background="#ECFDF5">
                                        <TextBlock Text="{Binding status}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#059669"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="تاريخ الإنشاء"
                                            Binding="{Binding CreatedAt}"
                                            Width="140"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    </DataGrid.Columns>

                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>
