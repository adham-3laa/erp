<Page x:Class="erp.Views.Orders.ApprovedOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:erp.Views.Orders"
      Background="Transparent">

    <Page.Resources>

        <!-- ===== Shadow ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Table Card ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ===== DataGrid ===== -->
        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
        </Style>

        <!-- Header -->
        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Row -->
        <Style x:Key="NiceDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE5E7EB"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFCBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cell -->
        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Text -->
        <Style x:Key="CenteredTextColumnElementStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <local:OrdersTopBar x:Name="OrdersTopBarControl"
                            Grid.Row="0"/>

        <!-- Table -->
        <Border Grid.Row="1"
                Margin="0,20,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <DataGrid x:Name="OrdersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Style="{StaticResource NiceDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
                      RowStyle="{StaticResource NiceDataGridRowStyle}"
                      CellStyle="{StaticResource NiceDataGridCellStyle}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="رقم الطلب"
                                        Binding="{Binding code}"
                                        Width="2*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="العميل"
                                        Binding="{Binding CustomerName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="المندوب"
                                        Binding="{Binding SalesRepName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="الإجمالي"
                                        Binding="{Binding TotalAmountDisplay}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="العمولة"
                                        Binding="{Binding commissionamount}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="الحالة"
                                        Binding="{Binding status}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="تاريخ الإنشاء"
                                        Binding="{Binding CreatedAt}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                </DataGrid.Columns>

            </DataGrid>
        </Border>
    </Grid>
</Page>
