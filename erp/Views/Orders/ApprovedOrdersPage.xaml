<Page x:Class="EduGate.Views.Orders.ApprovedOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:EduGate.Views.Orders"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TopBar -->
        <local:OrdersTopBar x:Name="OrdersTopBarControl"
                            Grid.Row="0"/>

        <!-- جدول الطلبات -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Padding="8">

            <DataGrid x:Name="OrdersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      HeadersVisibility="Column"

                SelectionUnit="CellOrRowHeader"
                      SelectionMode="Extended"
                      ClipboardCopyMode="ExcludeHeader">

                <!-- كليك يمين → نسخ -->
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="نسخ"
                                  Command="ApplicationCommands.Copy"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>

                    <!-- رقم الطلب (عريض) -->
                    <DataGridTextColumn Header="رقم الطلب"
                                        Binding="{Binding id}"
                                        Width="2*"/>

                    <!-- العميل -->
                    <DataGridTextColumn Header="العميل (ID)"
                                        Binding="{Binding customerid}"
                                        Width="*"/>

                    <!-- المندوب -->
                    <DataGridTextColumn Header="المندوب (ID)"
                                        Binding="{Binding salesrepid}"
                                        Width="*"/>

                    <!-- الإجمالي -->
                    <DataGridTextColumn Header="الإجمالي"
                                        Binding="{Binding TotalAmountDisplay}"
                                        Width="*"/>

                    <!-- العمولة -->
                    <DataGridTextColumn Header="العمولة"
                                        Binding="{Binding commissionamount}"
                                        Width="*"/>

                    <!-- الحالة -->
                    <DataGridTextColumn Header="الحالة"
                                        Binding="{Binding status}"
                                        Width="*"/>

                    <!-- التاريخ -->
                    <DataGridTextColumn Header="تاريخ الإنشاء"
                                        Binding="{Binding CreatedAt}"
                                        Width="*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
