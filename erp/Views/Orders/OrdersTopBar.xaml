<UserControl x:Class="EduGate.Views.Orders.OrdersTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Content="➕ إنشاء طلب"
                Width="140"
                Style="{StaticResource DarkButtonStyle}"
                Click="CreateOrder_Click"/>

        <Button Grid.Column="1"
                Content="📋 طلبات المندوبين"
                Width="160"
                Style="{StaticResource DarkButtonStyle}"
                Margin="8,0"
                Click="SalesRepOrders_Click"/>

        <Button Grid.Column="2"
                Content="✅ الطلبات المعتمدة"
                Width="160"
                Style="{StaticResource DarkButtonStyle}"
                Click="ApprovedOrders_Click"/>

        <TextBlock Grid.Column="4"
                   Text="الطلبات"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextDarkBrush}"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
