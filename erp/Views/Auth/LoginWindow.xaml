<Window x:Class="erp.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="450"
        Width="600"
        FlowDirection="RightToLeft"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None">

    <Grid Background="Transparent">
        <!-- Outer rounded shell -->
        <Border CornerRadius="26"
                Background="#F5F6FA"
                Effect="{StaticResource WindowShadow}">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Close Button -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Margin="0,0,10,0">
                    <Button Width="48" Height="40"
                            Background="#E11D48" Foreground="White"
                            BorderThickness="0"
                            Content="✕"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="Close_Click"/>
                </StackPanel>

                <!-- Main Content -->
                <Border Grid.Row="1"
                        Background="White"
                        CornerRadius="18"
                        BorderThickness="1"
                        BorderBrush="#E8EAF2"
                        Padding="30">

                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

                        <TextBlock Text="تسجيل الدخول"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Email -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="البريد الإلكتروني :"
                                       Width="140"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"/>
                            <TextBox x:Name="EmailBox"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40"
                                     Width="240"
                                     Padding="8"
                                     VerticalContentAlignment="Center"
                                     Background="White"
                                     BorderBrush="#CCC"
                                     BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8"
                                                            SnapsToDevicePixels="True">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="الباسورد :"
                                       Width="140"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"/>
                            <PasswordBox x:Name="Pwd"
                                         Height="40"
                                         Width="240"
                                         Padding="8"
                                         VerticalContentAlignment="Center"
                                         Background="White"
                                         BorderBrush="#CCC"
                                         BorderThickness="1">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="PasswordBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8"
                                                            SnapsToDevicePixels="True">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </StackPanel>

                        <!-- Login Button -->
                        <Button Content="تسجيل الدخول"
                                Height="42"
                                Width="364"
                                Background="#1E1B4B"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Click="Login_Click"
                                HorizontalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Message -->
                        <TextBlock Text="{Binding Message}"
                                   Foreground="Red"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   Margin="0,20,0,0"/>
                    </StackPanel>

                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
