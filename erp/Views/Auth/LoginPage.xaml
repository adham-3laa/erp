<Page x:Class="erp.Views.Auth.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}" Padding="24" MaxWidth="520" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="تسجيل الدخول"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,16"/>

                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="البريد الإلكتروني" Margin="0,0,0,6" Foreground="#6B7280"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="40"
                             Padding="12,0"
                             Style="{StaticResource GlowTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,18">
                    <TextBlock Text="كلمة المرور" Margin="0,0,0,6" Foreground="#6B7280"/>
                    <PasswordBox x:Name="Pwd"
                                 Height="40"
                                 Padding="12,0"
                                 Style="{StaticResource GlowPasswordBoxStyle}"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Content="Login"
                            Style="{StaticResource DarkButtonStyle}"
                            Height="42"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,10,0"
                            Command="{Binding LoginCommand}"
                            Click="Login_Click"/>

                    <Button Content="Logout"
                            Style="{StaticResource DarkButtonStyle}"
                            Height="42"
                            Width="120"
                            Command="{Binding LogoutCommand}"/>
                </StackPanel>

                <TextBlock Grid.Row="4"
                           Text="{Binding Message}"
                           Margin="0,16,0,0"
                           TextWrapping="Wrap"
                           Foreground="#374151"/>
            </Grid>
        </Border>
    </Grid>
</Page>
