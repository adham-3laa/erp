<Page x:Class="erp.Views.Auth.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent"
      FlowDirection="RightToLeft">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">

            <TextBlock Text="تسجيل الدخول"
                       FontSize="22"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Email -->
            <TextBox x:Name="EmailBox"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     Margin="0,0,0,12"
                     Padding="8"
                     VerticalContentAlignment="Center"/>

            <!-- Password -->
            <PasswordBox x:Name="Pwd"
                         Height="40"
                         Margin="0,0,0,12"
                         Padding="8"
                         VerticalContentAlignment="Center"/>

            <!-- Login Button -->
            <Button Content="تسجيل الدخول"
                    Height="42"
                    Background="#1E1B4B"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Login_Click"
                    Margin="0,0,0,12"/>

            <!-- Message -->
            <TextBlock Text="{Binding Message}"
                       Foreground="Red"
                       FontWeight="SemiBold"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
