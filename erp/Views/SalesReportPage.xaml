<Page x:Class="erp.Views.Reports.SalesReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}">

    <!-- ========== Resources (Same Reference Look) ========== -->
    <Page.Resources>

        <!-- ===== Glow (needed for old table frame) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Old Frame (Like CategoryListPage) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ===== Tabs ===== -->
        <!-- Active tab uses the global DarkButtonStyle (Primary hover/pressed) -->
        <Style x:Key="ActiveTabButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>

        <!-- Inactive tab (Gray + own hover/pressed so it doesn't switch to PrimaryHoverBrush) -->
        <Style x:Key="InactiveTabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="18"
                                Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="18" ShadowDepth="6" Opacity="0.14"/>
                            </Border.Effect>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4B5563"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#374151"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ========== Layout (Like Reference) ========== -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="Auto"/>
            <!-- Cards -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
        </Grid.RowDefinitions>

        <!-- ================= Header (Title + Tabs) ================= -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="📊 التقارير"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FF1F2937"
                           VerticalAlignment="Center"
                           Margin="0,0,14,0"/>

                <!-- (Center column left empty on purpose to match layout style) -->

                <!-- Tabs (Buttons) -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <Button Content="📊 تقرير المبيعات"
                            Style="{StaticResource ActiveTabButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Content="📦 حركة صنف"
                            Style="{StaticResource InactiveTabButtonStyle}"
                            Margin="0,0,10,0"
                            Click="OpenStockMovementReport"/>

                    <Button Content="💰 عمولات المندوبين"
                            Style="{StaticResource InactiveTabButtonStyle}"
                            Click="OpenCommissionReport"/>
                </StackPanel>
            </Grid>

            <!-- Subtitle -->
            <TextBlock Grid.Row="1"
                       Text="متابعة وتحليل أداء المبيعات والطلبات"
                       FontSize="14"
                       Foreground="#6B7280"
                       Margin="0,6,0,0"/>
        </Grid>

        <!-- ================= Filters (Old Frame) ================= -->
        <Border Grid.Row="1"
                Margin="0,18,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="من تاريخ"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Height="40"/>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="إلى تاريخ"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Height="40"/>
                </StackPanel>

                <Button Content="تحميل التقرير"
                        Command="{Binding LoadReportCommand}"
                        Style="{StaticResource DarkButtonStyle}"
                        Height="40"
                        Margin="16,18,0,0"/>
            </StackPanel>
        </Border>

        <!-- ================= Result Cards ================= -->
        <Grid Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Sales -->
            <Border Grid.Column="0"
                    Margin="8,8,4,8"
                    Padding="16"
                    Height="90"
                    CornerRadius="16"
                    Background="#FF4E88D2"
                    VerticalAlignment="Top">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="إجمالي المبيعات"
                               Foreground="#DBEAFE"
                               FontSize="13"/>
                    <TextBlock Text="{Binding Report.TotalSales, StringFormat='{}{0:N0} ج.م'}"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Orders -->
            <Border Grid.Column="1"
                    Margin="4,8,8,8"
                    Padding="16"
                    Height="90"
                    CornerRadius="16"
                    Background="#FF549476"
                    VerticalAlignment="Top">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="عدد الطلبات"
                               Foreground="#D1FAE5"
                               FontSize="13"/>
                    <TextBlock Text="{Binding Report.TotalOrders}"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Row 3 spacer -->
    </Grid>
</Page>
