<Page x:Class="erp.Views.Reports.SalesReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      FlowDirection="RightToLeft">

    <!-- ========== Resources ========== -->
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Base Button -->
        <Style x:Key="SimpleButton" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab -->
        <Style x:Key="ActiveTabButton"
               TargetType="Button"
               BasedOn="{StaticResource SimpleButton}">
            <Setter Property="Background" Value="#1E1B4B"/>
        </Style>
    </Page.Resources>

    <!-- ========== Layout ========== -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== Header ========== -->
        <StackPanel Margin="0,0,0,18">
            <TextBlock Text="📊 التقارير"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#111827"/>
            <TextBlock Text="متابعة وتحليل أداء المبيعات والطلبات"
                       FontSize="14"
                       Foreground="#6B7280"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- ========== Top Navigation (Tabs) ========== -->
        <Border Grid.Row="1"
                Background="#F3F4F6"
                CornerRadius="16"
                Padding="8"
                Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal">

                <Button Content="📊 تقرير المبيعات"
                        Style="{StaticResource ActiveTabButton}"
                        Margin="0,0,8,0"/>

                <Button Content="📦 حركة صنف"
                        Style="{StaticResource SimpleButton}"
                        Margin="0,0,8,0"
                        Click="OpenStockMovementReport"/>

                <Button Content="💰 عمولات المندوبين"
                        Style="{StaticResource SimpleButton}"
                        Click="OpenCommissionReport"/>
            </StackPanel>
        </Border>

        <!-- ========== Filters Card ========== -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="18"
                BorderThickness="1"
                BorderBrush="#E5E7EB"
                Padding="20"
                Margin="0,0,0,24">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="من تاريخ"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Height="38"/>
                </StackPanel>

                <StackPanel Margin="0,0,16,0">
                    <TextBlock Text="إلى تاريخ"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Height="38"/>
                </StackPanel>

                <Button Content="تحميل التقرير"
                        Command="{Binding LoadReportCommand}"
                        Style="{StaticResource ActiveTabButton}"
                        Height="38"
                        Margin="16,18,0,0"/>
            </StackPanel>
        </Border>

        <!-- ========== Result Cards ========== -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Total Sales -->
            <Border Grid.Column="0"
                    Margin="8"
                    Padding="28"
                    CornerRadius="20"
                    Background="#1E1B4B">
                <StackPanel>
                    <TextBlock Text="إجمالي المبيعات"
                               Foreground="#C7D2FE"
                               FontSize="14"/>
                    <TextBlock Text="{Binding Report.TotalSales,
                               StringFormat='{}{0:N0} ج.م'}"
                               Foreground="White"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Orders -->
            <Border Grid.Column="1"
                    Margin="8"
                    Padding="28"
                    CornerRadius="20"
                    Background="#10B981">
                <StackPanel>
                    <TextBlock Text="عدد الطلبات"
                               Foreground="#D1FAE5"
                               FontSize="14"/>
                    <TextBlock Text="{Binding Report.TotalOrders}"
                               Foreground="White"
                               FontSize="32"
                               FontWeight="Bold"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
