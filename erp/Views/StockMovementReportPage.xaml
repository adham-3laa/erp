<Page x:Class="erp.Views.Reports.StockMovementReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}">

    <!-- ========== Resources (Same Reference Look) ========== -->
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- ===== Glow (needed for old frame) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Old Frame (Like CategoryListPage) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ===== Tabs ===== -->
        <Style x:Key="ActiveTabButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>

        <Style x:Key="InactiveTabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="18"
                                Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="18" ShadowDepth="6" Opacity="0.14"/>
                            </Border.Effect>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4B5563"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#374151"/>
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ========== Layout (Like Reference) ========== -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Tabs -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Info row -->
            <RowDefinition Height="*"/>
            <!-- Cards -->
        </Grid.RowDefinitions>

        <!-- ================= Header (Title + Tabs) ================= -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="📦 تقرير حركة صنف"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FF1F2937"
                           VerticalAlignment="Center"
                           Margin="0,0,14,0"/>

                <!-- Tabs -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">

                    <Button Content="📊 تقرير المبيعات"
                            Style="{StaticResource InactiveTabButtonStyle}"
                            Margin="0,0,10,0"
                            Click="OpenSalesReport"/>

                    <Button Content="📦 حركة صنف"
                            Style="{StaticResource ActiveTabButtonStyle}"
                            Margin="0,0,10,0"/>

                    <Button Content="💰 عمولات المندوبين"
                            Style="{StaticResource InactiveTabButtonStyle}"
                            Click="OpenCommissionReport"/>
                </StackPanel>
            </Grid>

            <!-- Subtitle -->
            <TextBlock Grid.Row="1"
                       Text="متابعة حركة الإدخال والإخراج للمخزون"
                       FontSize="14"
                       Foreground="#6B7280"
                       Margin="0,6,0,0"/>
        </Grid>

        <!-- ================= Input (Old Frame) ================= -->
        <Border Grid.Row="1"
                Margin="0,18,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="اسم الصنف"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <TextBox Width="320"
                             Height="40"
                             Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="أدخل اسم المنتج مثل Rolex أو rolex"/>
                </StackPanel>

                <Button Content="تحميل التقرير"
                        Command="{Binding LoadReportCommand}"
                        Style="{StaticResource DarkButtonStyle}"
                        Height="40"
                        Margin="12,18,0,0"/>
            </StackPanel>
        </Border>

        <!-- ================= Info Row (Old Frame) ================= -->
        <Border Grid.Row="2"
                Margin="0,16,0,0"
                Style="{StaticResource GlowingTableOuterBorder}"
                Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Product ID"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <TextBlock Text="{Binding Report.ProductId}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#FF111827"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="اسم الصنف (من التقرير)"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <TextBlock Text="{Binding Report.ProductName}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#FF111827"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="12,0,0,0">
                    <TextBlock Text="Message"
                               FontSize="12"
                               Foreground="#6B7280"/>
                    <TextBlock Text="{Binding Report.Message}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#FF111827"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= Result Cards (KEEP LOGIC/BINDINGS) ================= -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- الصف الأول: 3 كروت -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Total In -->
                <Border Grid.Column="0"
                        Margin="8"
                        Padding="24"
                        CornerRadius="16"
                        Background="#FF4E88D2">
                    <StackPanel>
                        <TextBlock Text="إجمالي الداخل"
                                   Foreground="#DBEAFE"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Report.TotalIn}"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Out -->
                <Border Grid.Column="1"
                        Margin="8"
                        Padding="24"
                        CornerRadius="16"
                        Background="#FF5A1212">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخارج"
                                   Foreground="#FEE2E2"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Report.TotalOut}"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Current Stock -->
                <Border Grid.Column="2"
                        Margin="8"
                        Padding="24"
                        CornerRadius="16"
                        Background="#FF549476">
                    <StackPanel>
                        <TextBlock Text="الرصيد الحالي"
                                   Foreground="#D1FAE5"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding Report.CurrentStock}"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- الصف الثاني: تفاصيل Total In (4 كروت) -->
            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="8" Padding="18" CornerRadius="16" Background="#EFF6FF">
                    <StackPanel>
                        <TextBlock Text="إجمالي الداخل (مشتريات)"
                                   Foreground="#1D4ED8"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalInPurchased}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="8" Padding="18" CornerRadius="16" Background="#ECFDF5">
                    <StackPanel>
                        <TextBlock Text="إجمالي الداخل (مرتجعات)"
                                   Foreground="#047857"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalInReturned}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Margin="8" Padding="18" CornerRadius="16" Background="#FDF2F8">
                    <StackPanel>
                        <TextBlock Text="إجمالي الداخل (تسويات)"
                                   Foreground="#9D174D"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalInAdjusted}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ✅ NEW -->
                <Border Grid.Column="3" Margin="8" Padding="18" CornerRadius="16" Background="#EEF2FF">
                    <StackPanel>
                        <TextBlock Text="إجمالي الداخل (تعديل موظف)"
                                   Foreground="#3730A3"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalInUpdatedByEmployee}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- الصف الثالث: تفاصيل Total Out (4 كروت) -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="8" Padding="18" CornerRadius="16" Background="#FEF2F2">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخارج (مبيعات)"
                                   Foreground="#991B1B"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalOutSold}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="8" Padding="18" CornerRadius="16" Background="#FFF7ED">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخارج (تسويات)"
                                   Foreground="#9A3412"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalOutAdjusted}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ✅ NEW -->
                <Border Grid.Column="2" Margin="8" Padding="18" CornerRadius="16" Background="#F0FDFA">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخارج (تعديل موظف)"
                                   Foreground="#0F766E"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Report.TotalOutUpdatedByEmployee}"
                                   Foreground="#111827"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- TraceId -->
                <Border Grid.Column="3" Margin="8" Padding="18" CornerRadius="16" Background="#F3F4F6"/>
            </Grid>

            <!-- Spacer -->
            <Border Grid.Row="3" Background="Transparent"/>
        </Grid>
    </Grid>
</Page>
