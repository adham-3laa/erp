<Page x:Class="erp.Views.Reports.StockMovementReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Tab Styles -->
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource DarkButtonStyle}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="InactiveTabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="20" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Search -->
                <RowDefinition Height="Auto"/> <!-- Error Card -->
                <RowDefinition Height="Auto"/> <!-- Product Info -->
                <RowDefinition Height="Auto"/> <!-- Product Info -->
                <RowDefinition Height="Auto"/> <!-- Summary Cards -->
                <RowDefinition Height="Auto"/> <!-- Incoming Details -->
                <RowDefinition Height="Auto"/> <!-- Outgoing Details -->
                <RowDefinition Height="*"/>    <!-- Spacer -->
                <RowDefinition Height="Auto"/> <!-- Incoming Details -->
                <RowDefinition Height="Auto"/> <!-- Outgoing Details -->
                <RowDefinition Height="*"/>    <!-- Spacer -->
            </Grid.RowDefinitions>

            <!-- ========== HEADER SECTION ========== -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title & Description -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="📦 تقرير حركة صنف" FontSize="32" FontWeight="Bold" Foreground="#1F2937"/>
                    <TextBlock Text="متابعة حركة الإدخال والإخراج للمخزون" 
                               FontSize="15" Foreground="#6B7280" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Navigation Tabs -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Button Content="📊 تقريرالمبيعات" Style="{StaticResource InactiveTabButtonStyle}" Margin="0,0,8,0" Click="OpenSalesReport"/>
                    <Button Content="📦 حركة صنف" Style="{StaticResource ActiveTabButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="💰 العمولات" Style="{StaticResource InactiveTabButtonStyle}" Margin="0,0,8,0" Click="OpenCommissionReport"/>
                    <Button Content="👤 العملاء" Style="{StaticResource InactiveTabButtonStyle}" Margin="0,0,8,0" Click="OpenCustomerReport"/>
                    <Button Content="👔 المندوبين" Style="{StaticResource InactiveTabButtonStyle}" Margin="0,0,8,0" Click="OpenSalesRepReport"/>
                    <Button Content="🏭 الموردين" Style="{StaticResource InactiveTabButtonStyle}" Click="OpenSupplierReport"/>
                </StackPanel>
            </Grid>

            <!-- ========== SEARCH SECTION (Single Row: Input + Clear + Download) ========== -->
            <Border Grid.Row="1" Margin="0,24,0,0" Background="White" CornerRadius="14" Padding="16"
                    BorderBrush="#E5E7EB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Name Input (Autocomplete) -->
                    <ComboBox Grid.Column="0" Height="42"
                              IsEditable="True"
                              StaysOpenOnEdit="True"
                              Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding SelectedSuggestion}"
                              ItemsSource="{Binding Suggestions}"
                              DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="أدخل اسم الصنف ثم اضغط على تحميل التقرير"
                              FontSize="14"
                              VerticalContentAlignment="Center"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                              <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                              </ComboBox.ItemsPanel>
                    </ComboBox>

                    <!-- Clear Button -->
                    <Button Grid.Column="1" Content="مسح" 
                            Height="42" Width="80"
                            Margin="8,0,0,0"
                            Background="#F3F4F6"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="10" 
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Download Button -->
                    <Button Grid.Column="2" Content="📥 تحميل التقرير" 
                            Command="{Binding LoadReportCommand}"
                            Style="{StaticResource DarkButtonStyle}"
                            Height="42" Width="150"
                            Margin="8,0,0,0"
                            IsEnabled="{Binding IsNotLoading}"/>
                </Grid>
            </Border>

            <!-- ========== ERROR CARD ========== -->
            <Border Grid.Row="2" Margin="0,0,0,20"
                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Background="#FEF2F2" BorderBrush="#FCA5A5" BorderThickness="1" CornerRadius="12" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Background="#FEE2E2" CornerRadius="12" Width="48" Height="48" Margin="0,0,16,0" VerticalAlignment="Top">
                         <materialDesign:PackIcon Kind="{Binding ErrorState.IconKind}" Foreground="#DC2626" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ErrorState.Title}" FontWeight="Bold" FontSize="16" Foreground="#991B1B" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding ErrorState.Message}" FontSize="14" Foreground="#B91C1C" TextWrapping="Wrap" Opacity="0.9"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" 
                            Content="{Binding ErrorState.ActionText}" 
                            Command="{Binding LoadReportCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="#DC2626" BorderBrush="#DC2626"
                            Margin="16,0,0,0" VerticalAlignment="Center"
                             Height="36" Padding="16,0"/>
                </Grid>
            </Border>

            <!-- ========== PRODUCT INFO CARD ========== -->
            <Border Grid.Row="3" Margin="0,20,0,0" 
                    Background="White" CornerRadius="14" Padding="18"
                    BorderBrush="#E5E7EB" BorderThickness="1"
                    Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Icon -->
                    <Border Grid.Column="0" Background="#EFF6FF" CornerRadius="10" 
                            Width="48" Height="48" Margin="0,0,14,0">
                        <materialDesign:PackIcon Kind="PackageVariant" Width="24" Height="24" 
                                                 Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Product Details -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Report.ProductName, FallbackValue='اسم المنتج'}" 
                                   FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="معرف:" FontSize="11" Foreground="#9CA3AF" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding Report.ProductId, FallbackValue='-'}" 
                                       FontSize="11" Foreground="#6B7280" FontFamily="Consolas"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Status Badge -->
                    <Border Grid.Column="2" Background="#ECFDF5" CornerRadius="8" 
                            Padding="10,5" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="14" Height="14" 
                                                     Foreground="#10B981" Margin="0,0,4,0"/>
                            <TextBlock Text="تم جلب البيانات بنجاح" FontSize="12" 
                                       Foreground="#059669" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- ========== SUMMARY CARDS (RTL: In → Out → Stock) ========== -->
            <UniformGrid Grid.Row="4" Columns="3" Margin="0,20,0,0"
                         Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                
                <!-- Total In -->
                <Border Background="#EFF6FF" CornerRadius="14" Padding="18" Margin="5" Height="110">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="إجمالي الداخل" Foreground="#3B82F6" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Report.TotalIn, FallbackValue='0'}" 
                                       Foreground="#1E3A8A" FontSize="34" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1" Kind="ArrowDownCircle" 
                                                 Width="36" Height="36" Foreground="#3B82F6" 
                                                 Opacity="0.25" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Total Out -->
                <Border Background="#FEF2F2" CornerRadius="14" Padding="18" Margin="5" Height="110">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="إجمالي الخارج" Foreground="#EF4444" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Report.TotalOut, FallbackValue='0'}" 
                                       Foreground="#991B1B" FontSize="34" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1" Kind="ArrowUpCircle" 
                                                 Width="36" Height="36" Foreground="#EF4444" 
                                                 Opacity="0.25" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Current Stock -->
                <Border Background="#ECFDF5" CornerRadius="14" Padding="18" Margin="5" Height="110">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="الرصيد الحالي" Foreground="#10B981" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Report.CurrentStock, FallbackValue='0'}" 
                                       Foreground="#065F46" FontSize="34" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1" Kind="PackageVariant" 
                                                 Width="36" Height="36" Foreground="#10B981" 
                                                 Opacity="0.25" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- ========== INCOMING MOVEMENTS ========== -->
            <StackPanel Grid.Row="5" Margin="0,28,0,0"
                        Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                
                <Border Height="1" Background="#E5E7EB" Margin="0,0,0,18"/>
                
                <TextBlock Text="📥 الحركات الداخلة" FontSize="18" FontWeight="Bold" 
                           Foreground="#1F2937" Margin="0,0,0,14"/>

                <UniformGrid Columns="4">
                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="المشتريات" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalInPurchased, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="المرتجعات" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalInReturned, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="التسويات" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalInAdjusted, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="تعديلات موظفين" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalInUpdatedByEmployee, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- ========== OUTGOING MOVEMENTS ========== -->
            <StackPanel Grid.Row="6" Margin="0,28,0,0"
                        Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                
                <Border Height="1" Background="#E5E7EB" Margin="0,0,0,18"/>
                
                <TextBlock Text="📤 الحركات الخارجة" FontSize="18" FontWeight="Bold" 
                           Foreground="#1F2937" Margin="0,0,0,14"/>

                <UniformGrid Columns="3">
                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="المبيعات" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalOutSold, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="التسويات" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalOutAdjusted, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="16" Margin="4" Height="92"
                            BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="تعديلات موظفين" Foreground="#6B7280" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Report.TotalOutUpdatedByEmployee, FallbackValue='0'}" 
                                       Foreground="#111827" FontSize="26" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- ========== EMPTY STATE (Centered, Not in Cards) ========== -->
            <Border Grid.Row="4" Grid.RowSpan="3" Margin="0,60,0,60"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- ========== LOADING OVERLAY ========== -->
            <Border Grid.Row="0" Grid.RowSpan="8" Background="#F8FFFFFF" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Width="220" Height="5" IsIndeterminate="True" 
                                 Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="جاري تحميل التقرير..." FontSize="15" FontWeight="SemiBold"
                               Foreground="#374151" Margin="0,16,0,0" HorizontalAlignment="Center"/>
                    <TextBlock Text="يرجى الانتظار..." FontSize="12"
                               Foreground="#6B7280" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
