<Page x:Class="erp.Views.Returns.CreateReturnView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      FlowDirection="RightToLeft"
      Background="#F5F6FA"
      Title="إنشاء طلب إرجاع">

    <!-- ===== Resources ===== -->
    <Page.Resources>

        <!-- Base Button -->
        <Style x:Key="SimpleButton" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource SimpleButton}">
            <Setter Property="Background" Value="#1E1B4B"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,8"/>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource SimpleButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="18,8"/>
        </Style>

        <Style x:Key="PurpleButton" TargetType="Button" BasedOn="{StaticResource SimpleButton}">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="18,10"/>
        </Style>

        <Style x:Key="SmallTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

    </Page.Resources>

    <!-- ===== Layout ===== -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Header ===== -->
        <Grid Margin="0,0,0,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- زر الرجوع (أعلى الشمال) -->
            <Button Content="⬅ رجوع"
                    Width="110"
                    Height="36"
                    Style="{StaticResource PrimaryButton}"
                    Click="Back_Click"/>

            <!-- العنوان -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="📦 إنشاء طلب إرجاع"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#111827"/>
                <TextBlock Text="أدخل رقم الطلب ثم بيانات المنتج وأضف أكثر من منتج لو لزم"
                           FontSize="13"
                           Foreground="#6B7280"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- ===== Form Card ===== -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="18"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="16"
                Margin="0,0,0,14">

            <StackPanel>

                <!-- OrderId -->
                <TextBlock Text="رقم الطلب" Style="{StaticResource FieldLabel}"/>
                <TextBox Width="420"
                         HorizontalAlignment="Right"
                         Style="{StaticResource SmallTextBox}"
                         Text="{Binding OrderId, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="أدخل رقم الطلب"
                         materialDesign:HintAssist.Foreground="#9CA3AF"/>

                <Border Height="1" Background="#E5E7EB" Margin="0,14,0,14"/>

                <!-- Product Fields -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="اسم المنتج" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource SmallTextBox}"
                                 Text="{Binding CurrentProduct.ProductId, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="مثال: Rolex"
                                 materialDesign:HintAssist.Foreground="#9CA3AF"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="الكمية" Style="{StaticResource FieldLabel}"/>
                        <TextBox Style="{StaticResource SmallTextBox}"
                                 Text="{Binding CurrentProduct.Quantity, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="مثال: 2"
                                 materialDesign:HintAssist.Foreground="#9CA3AF"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="سبب الإرجاع"
                           Style="{StaticResource FieldLabel}"
                           Margin="0,12,0,6"/>
                <TextBox Style="{StaticResource SmallTextBox}"
                         Text="{Binding CurrentProduct.Reason, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="اكتب سبب الإرجاع"
                         materialDesign:HintAssist.Foreground="#9CA3AF"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0">

                    <Button Content="➕ إضافة منتج"
                            Width="150"
                            Height="38"
                            Style="{StaticResource GreenButton}"
                            Click="AddItem_Click"/>

                    <Button Content="إرجاع المنتجات"
                            Width="170"
                            Height="38"
                            Style="{StaticResource PurpleButton}"
                            Command="{Binding CreateReturnCommand}"
                            Margin="10,0,0,0"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- ===== Status / Error ===== -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#DC2626"
                       FontSize="13"
                       TextAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

    </Grid>
</Page>
