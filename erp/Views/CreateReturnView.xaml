<Page x:Class="erp.Views.Returns.CreateReturnView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="إنشاء طلب إرجاع">

    <Grid Background="#F4F4F4">
        <StackPanel Margin="30">

            <TextBlock Text="رقم الطلب" FontFamily="Cairo" FontSize="16"/>
            <TextBox Width="300" Height="40"
                     Text="{Binding OrderId, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Center"/>

            <TextBlock Text="اسم المنتج" FontFamily="Cairo" FontSize="16"/>
            <TextBox Width="300" Height="40"
                     Text="{Binding CurrentProduct.ProductId, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Center"/>

            <TextBlock Text="الكمية" FontFamily="Cairo" FontSize="16"/>
            <TextBox Width="300" Height="40"
                     Text="{Binding CurrentProduct.Quantity, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Center"/>

            <TextBlock Text="سبب الإرجاع" FontFamily="Cairo" FontSize="16"/>
            <TextBox Width="300" Height="40"
                     Text="{Binding CurrentProduct.Reason, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Center"/>

            <Button Content="إدخال منتج آخر"
                    Width="160"
                    Height="45"
                    Margin="0,20,0,10"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="AddItem_Click"/>

            <Button Content="إرجاع المنتجات"
                    Width="200"
                    Height="50"
                    FontSize="18"
                    Background="#6200EE"
                    Foreground="White"
                    Command="{Binding CreateReturnCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="1"/>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
