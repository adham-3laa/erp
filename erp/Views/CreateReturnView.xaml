<Page x:Class="erp.Views.Returns.CreateReturnView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="إنشاء طلب إرجاع">

    <Grid Background="#F4F4F4">
        <!-- Content Area -->
        <StackPanel Margin="30">

            <!-- OrderId TextBox with Arabic font -->
            <TextBlock Text="رقم الطلب" FontFamily="Cairo" FontSize="16" Margin="0,10"/>
            <TextBox x:Name="OrderIdTextBox" Width="300" Height="40" VerticalAlignment="Top"
                     Text="{Binding OrderId}" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="16"
                     Padding="10,5" FontFamily="Cairo" BorderBrush="#4CAF50" BorderThickness="1"/>

            <!-- Product Data Input -->
            <TextBlock Text="اسم المنتج" FontFamily="Cairo" FontSize="16" Margin="0,10"/>
            <TextBox x:Name="ProductIdTextBox" Width="300" Height="40" VerticalAlignment="Top"
                     Text="{Binding CurrentProduct.ProductId}" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="16"
                     Padding="10,5" FontFamily="Cairo" BorderBrush="#4CAF50" BorderThickness="1"/>

            <TextBlock Text="الكمية" FontFamily="Cairo" FontSize="16" Margin="0,10"/>
            <TextBox x:Name="QuantityTextBox" Width="300" Height="40" VerticalAlignment="Top"
                     Text="{Binding CurrentProduct.Quantity}" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="16"
                     Padding="10,5" FontFamily="Cairo" BorderBrush="#4CAF50" BorderThickness="1"/>

            <TextBlock Text="سبب الإرجاع" FontFamily="Cairo" FontSize="16" Margin="0,10"/>
            <TextBox x:Name="ReasonTextBox" Width="300" Height="40" VerticalAlignment="Top"
                     Text="{Binding CurrentProduct.Reason}" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="16"
                     Padding="10,5" FontFamily="Cairo" BorderBrush="#4CAF50" BorderThickness="1"/>

            <!-- Add Item Button -->
            <Button Content="إدخال منتج آخر" Width="150" Height="45" Margin="0,20,0,10"
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"
                    BorderBrush="#388E3C" BorderThickness="1" Padding="10,5" FontFamily="Cairo" Click="AddItem_Click"/>

            <Button Content="إرجاع المنتجات"
        Width="200"
        Height="50"
        FontSize="18"
        FontWeight="Bold"
        Margin="0,20,0,10"
        Background="#FF6200EE"
        Foreground="White"
        HorizontalAlignment="Center"
        BorderBrush="#FF5722"
        BorderThickness="1"
        Padding="10,5"
        FontFamily="Cairo"
        Command="{Binding CreateReturnCommand}" />


            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="14" Margin="0,10,0,10" HorizontalAlignment="Center" FontFamily="Cairo"/>
        </StackPanel>
    </Grid>
</Page>
