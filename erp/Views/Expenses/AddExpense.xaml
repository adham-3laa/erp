<Page x:Class="erp.Views.Expenses.AddExpensePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Grid Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="إضافة مصروف جديد"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"/>

            <Button Grid.Column="1"
                    Content="رجوع"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="Back_Click"/>
        </Grid>

        <!-- ================= Form ================= -->
        <Border Grid.Row="1"
                Margin="0,24,0,0"
                Style="{StaticResource CardStyle}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <!-- Inner Card -->
            <Border Style="{StaticResource InnerCardContainer}"
                    Width="620"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,32,0,0">

                <StackPanel>

                    <!-- ================= Amount ================= -->
                    <TextBlock Text="المبلغ"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </Border>

                    <!-- ================= Description ================= -->
                    <TextBlock Text="الوصف"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,20,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="100"/>
                        </Border>
                    </Border>

                    <!-- ================= Messages ================= -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#DC2626"
                               Margin="0,14,0,0"
                               Visibility="{Binding ErrorMessage,
                                   Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

                    <TextBlock Text="تم إضافة المصروف بنجاح ✔"
                               Foreground="#16A34A"
                               Margin="0,14,0,0"
                               Visibility="{Binding IsSuccess,
                                   Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- ================= Actions ================= -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,32,0,0">

                        <Button Content="حفظ المصروف"
                                Width="160"
                                Margin="0,0,12,0"
                                Style="{StaticResource DarkButtonStyle}"
                                Command="{Binding SaveCommand}"
                                IsEnabled="{Binding IsBusy,
                                    Converter={StaticResource BoolToVisibilityConverter},
                                    ConverterParameter=invert}"/>

                        <Button Content="رجوع"
                                Width="120"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="Back_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
