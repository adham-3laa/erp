<Page x:Class="erp.Views.Expenses.ExpensesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}">

    <!-- ================= Styles (Reference Design) ================= -->
    <Page.Resources>

        <!-- ===== Glow (needed for old table frame) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Old Table Frame (same as Category reference) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF6F6F6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ✅ Header (bigger + centered) -->
        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Row -->
        <Style x:Key="NiceDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE5E7EB"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFCBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ✅ Cell (always centered) -->
        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- ✅ Text inside TextColumns (always centered) -->
        <Style x:Key="CenteredTextColumnElementStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Page.Resources>

    <!-- ================= Layout (Reference) ================= -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= Header (same structure as Category) ================= -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Grid.Column="0"
                       Text="المصروفات"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#FF1F2937"
                       VerticalAlignment="Center"
                       Margin="0,0,14,0"/>

            <!-- Center spacer -->
            <Border Grid.Column="1" Opacity="0"/>

            <!-- Buttons -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">

                <Button Content="مصروفاتي"
                        Width="140"
                        Margin="0,0,10,0"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="MyExpenses_Click"/>

                <Button Content="مصروفات المحاسب"
                        Width="160"
                        Margin="0,0,10,0"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="ExpensesByAccountant_Click"/>

                <Button Content="إضافة مصروف"
                        Width="140"
                        Margin="0,0,10,0"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="AddExpense_Click"/>

                <Button Content="🔄 تحديث"
                        Width="120"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Refresh_Click"/>
            </StackPanel>
        </Grid>

        <!-- ================= Table (old frame like reference) ================= -->
        <Border Grid.Row="1"
                Margin="0,20,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <DataGrid ItemsSource="{Binding Expenses}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      ColumnWidth="*"
                      Style="{StaticResource NiceDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
                      RowStyle="{StaticResource NiceDataGridRowStyle}"
                      CellStyle="{StaticResource NiceDataGridCellStyle}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="المبلغ"
                                        Binding="{Binding Amount, StringFormat=N2}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="الوصف"
                                        Binding="{Binding Description}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="التاريخ"
                                        Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    <DataGridTextColumn Header="المحاسب"
                                        Binding="{Binding AccountantName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ================= Error (same placement/style as reference) ================= -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   FontSize="14"
                   Margin="10"
                   HorizontalAlignment="Center"/>
    </Grid>
</Page>
