<Page x:Class="erp.Views.Expenses.MyExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== العنوان + زر الرجوع ===== -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="مصروفاتي"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextDarkBrush}"/>

            <Button Grid.Column="1"
                    Content="رجوع"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="Back_Click"/>
        </Grid>

        <!-- ===== جدول المصروفات ===== -->
        <Border Grid.Row="1"
                Margin="0,20,0,0"
                Style="{StaticResource CardStyle}">

            <Grid>

                <!-- الجدول -->
                <DataGrid ItemsSource="{Binding Expenses}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="44"
                          IsReadOnly="True">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="المبلغ"
                                            Binding="{Binding Amount}"
                                            Width="120"/>

                        <DataGridTextColumn Header="الوصف"
                                            Binding="{Binding Description}"
                                            Width="*"/>

                        <DataGridTextColumn Header="تاريخ الإنشاء"
                                            Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}"
                                            Width="150"/>

                        <DataGridTextColumn Header="اسم المحاسب"
                                            Binding="{Binding AccountantName}"
                                            Width="220"/>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- رسالة خطأ -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding ErrorMessage,
                               Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

            </Grid>
        </Border>

    </Grid>
</Page>
