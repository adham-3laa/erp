<Page x:Class="EduGate.Views.Accountants.CurrentAccountantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Grid Margin="20">
        <!-- خلي أي TextBlock يمين افتراضيًا -->
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="بياناتي"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,12"
                   Foreground="{StaticResource PrimaryBrush}"
                   HorizontalAlignment="Right"/>

        <!-- Error (بدون Converter) -->
        <Border Grid.Row="1"
                Margin="0,0,0,12"
                Padding="10"
                CornerRadius="12"
                Background="#22FF0000"
                BorderBrush="#55FF0000"
                BorderThickness="1"
                HorizontalAlignment="Stretch">
            <Border.Style>
                <Style TargetType="Border">
                    <!-- الافتراضي Visible -->
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <!-- لو null => اخفي -->
                        <DataTrigger Binding="{Binding ErrorMessage}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <!-- لو فاضي => اخفي -->
                        <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="DarkRed"/>
        </Border>

        <!-- Card (Glow + Inner) -->
        <Border Grid.Row="2"
                Style="{StaticResource GlowGradientFrame}"
                HorizontalAlignment="Center"
                Width="560">

            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Name -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,14">
                        <TextBlock Text="الاسم"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding Accountant.Name, TargetNullValue='—'}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDarkBrush}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,14">
                        <TextBlock Text="الإيميل"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding Accountant.Email, TargetNullValue='—'}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDarkBrush}"/>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="رقم الهاتف"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBlock Text="{Binding Accountant.PhoneNumber, TargetNullValue='—'}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDarkBrush}"/>
                    </StackPanel>

                    <!-- Loading (بدون Converter) -->
                    <Border Background="#66000000"
                            CornerRadius="20">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar Width="220" Height="10" IsIndeterminate="True"/>
                            <TextBlock Text="جارٍ التحميل..."
                                       Margin="0,10,0,0"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
