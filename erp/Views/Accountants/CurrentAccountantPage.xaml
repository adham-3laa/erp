<Page x:Class="EduGate.Views.Accountants.CurrentAccountantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Margin="40">
        <TextBlock Text="بياناتي" FontSize="22" Margin="0,0,0,20"/>
        <TextBlock Text="الاسم:"/>
        <TextBlock Text="{Binding Accountant.Name}" Margin="0,0,0,10"/>
        <TextBlock Text="الإيميل:"/>
        <TextBlock Text="{Binding Accountant.Email}" Margin="0,0,0,10"/>
        <TextBlock Text="رقم الهاتف:"/>
        <TextBlock Text="{Binding Accountant.PhoneNumber}"/>
    </StackPanel>
</Page>
