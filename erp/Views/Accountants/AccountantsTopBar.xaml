<UserControl x:Class="EduGate.Views.Accountants.AccountantsTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" VerticalAlignment="Stretch">
        <DockPanel Margin="20" LastChildFill="False">
            <Button Content="➕ إضافة محاسب" Width="150" Height="40" Margin="8,0" FontWeight="SemiBold" Background="#2D2D44" Foreground="White" BorderThickness="0" Cursor="Hand" DockPanel.Dock="Right" Click="AddAccountant_Click"/>
            <Button Content="📋 جميع المحاسبين" Width="160" Height="40" Margin="8,0" FontWeight="SemiBold" Background="#2D2D44" Foreground="White" BorderThickness="0" Cursor="Hand" DockPanel.Dock="Right" Click="AllAccountants_Click"/>
            <Button Content="👤 المحاسب الحالي" Width="160" Height="40" Margin="8,0" FontWeight="SemiBold" Background="#2D2D44" Foreground="White" BorderThickness="0" Cursor="Hand" DockPanel.Dock="Right" Click="CurrentAccountant_Click"/>
        </DockPanel>
    </Border>
</UserControl>
