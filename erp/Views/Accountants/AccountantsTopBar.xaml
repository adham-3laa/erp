<UserControl x:Class="EduGate.Views.Accountants.AccountantsTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top">

    <Border Background="{StaticResource CardBrush}"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">

        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="المحاسبين"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource PrimaryBrush}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                <Button Style="{StaticResource DarkButtonStyle}"
                        Margin="6,0"
                        Content="👤 المحاسب الحالي"
                        Click="CurrentAccountant_Click"/>

                <Button Style="{StaticResource DarkButtonStyle}"
                        Margin="6,0"
                        Content="📋 جميع المحاسبين"
                        Click="AllAccountants_Click"/>

                <Button Style="{StaticResource DarkButtonStyle}"
                        Margin="6,0"
                        Content="➕ إضافة محاسب"
                        Click="AddAccountant_Click"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
