<Page x:Class="EduGate.Views.Accountants.AllAccountantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding Accountants}"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="الاسم" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="الإيميل" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="الهاتف" Binding="{Binding PhoneNumber}"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
