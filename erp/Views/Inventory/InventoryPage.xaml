<Page x:Class="erp.Views.Inventory.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:erp.Views.Inventory"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <!-- ================= Styles ================= -->
    <Page.Resources>

        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DeleteHoverRedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E1B4B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Page.Resources>

    <!-- ================= Layout ================= -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= TopBar ================= -->
        <local:InventoryTopBar x:Name="InventoryTopBarControl"
                               Grid.Row="0"/>

        <!-- ================= Header + Search ================= -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="المخزون"
                       FontSize="26"
                       FontWeight="Bold"
                       Grid.Column="0"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <TextBlock Text="بحث:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <TextBox x:Name="SearchTextBox"
                         Width="220"
                         Height="36"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="🔄 تحديث"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="RefreshButton_Click"/>
        </Grid>

        <!-- ================= Table ================= -->
        <Border Grid.Row="2"
                Margin="0,20,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <DataGrid x:Name="ProductsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{StaticResource NiceDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
                      CellStyle="{StaticResource NiceDataGridCellStyle}">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding ProductId}"
                                        Width="200"/>

                    <DataGridTextColumn Header="اسم المنتج"
                                        Binding="{Binding Name}"
                                        Width="*"/>

                    <DataGridTextColumn Header="سعر البيع"
                                        Binding="{Binding SalePrice}"
                                        Width="100"/>

                    <DataGridTextColumn Header="سعر الشراء"
                                        Binding="{Binding BuyPrice}"
                                        Width="100"/>

                    <DataGridTextColumn Header="الكمية"
                                        Binding="{Binding Quantity}"
                                        Width="80"/>

                    <DataGridTextColumn Header="SKU"
                                        Binding="{Binding SKU}"
                                        Width="120"/>

                    <DataGridTextColumn Header="الصنف"
                                        Binding="{Binding Category}"
                                        Width="150"/>

                    <!-- Edit -->
                    <DataGridTemplateColumn Header="تعديل" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏"
                                        Width="30"
                                        Height="30"
                                        Click="EditProduct_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Delete -->
                    <DataGridTemplateColumn Header="حذف" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑"
                                        Width="30"
                                        Height="30"
                                        Style="{StaticResource DeleteHoverRedButtonStyle}"
                                        Click="DeleteProduct_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ================= Pagination ================= -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0">

            <Button Content="&lt;&lt;"
                    Width="50"
                    Click="FirstPage_Click"/>

            <Button Content="&lt;"
                    Width="50"
                    Click="PrevPage_Click"/>

            <TextBlock x:Name="PageTextBlock"
                       Margin="12,0"
                       VerticalAlignment="Center"/>

            <Button Content="&gt;"
                    Width="50"
                    Click="NextPage_Click"/>

            <Button Content="&gt;&gt;"
                    Width="50"
                    Click="LastPage_Click"/>
        </StackPanel>

        <!-- ================= Error ================= -->
        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="4"
                   Foreground="Red"
                   Visibility="Collapsed"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Page>
