<Page x:Class="erp.Views.Inventory.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:erp.Views.Inventory"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <!-- ================= Styles ================= -->
    <Page.Resources>

        <!-- Shadow -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="14"
                          ShadowDepth="0"
                          Opacity="0.25"/>

        <!-- Table Card -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SoftBorderBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="46"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
        </Style>

        <!-- Header -->
        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Cell -->
        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Text inside TextColumn -->
        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Delete Button -->
        <Style x:Key="DeleteHoverRedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Page.Resources>

    <!-- ================= Layout ================= -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= TopBar ================= -->
        <local:InventoryTopBar x:Name="InventoryTopBarControl"
                               Grid.Row="0"/>

        <!-- ================= Header + Search ================= -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Text="المخزون"
                       FontSize="26"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <!-- Search Box (WPF Placeholder Safe) -->
            <Border Grid.Column="1"
                    Width="320"
                    Height="42"
                    CornerRadius="10"
                    BorderBrush="{StaticResource SoftBorderBrush}"
                    BorderThickness="1"
                    HorizontalAlignment="Center">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <TextBlock Text="🔍"
                               FontSize="18"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- TextBox + Placeholder -->
                    <Grid Grid.Column="1">

                        <TextBox x:Name="SearchTextBox"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="4"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 TextChanged="SearchTextBox_TextChanged"/>

                        <!-- Placeholder -->
                        <TextBlock Text="ابحث باسم المنتج"
                                   Foreground="#9CA3AF"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </Grid>
                </Grid>
            </Border>

            <!-- Refresh -->
            <Button Grid.Column="2"
                    Content="🔄 تحديث"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="RefreshButton_Click"/>
        </Grid>

        <!-- ================= Table ================= -->
        <Border Grid.Row="2"
                Margin="0,20,0,0"
                Style="{StaticResource GlowingTableOuterBorder}">

            <DataGrid x:Name="ProductsDataGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Style="{StaticResource NiceDataGridStyle}"
              ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
              CellStyle="{StaticResource NiceDataGridCellStyle}"
              ScrollViewer.VerticalScrollBarVisibility="Disabled"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              VerticalAlignment="Top"
              RowDetailsVisibilityMode="Collapsed" 
               EnableRowVirtualization="False">    


                <DataGrid.Columns>

                    <DataGridTextColumn Header="رقم المنتج"
                                        Binding="{Binding code}"
                                        Width="200"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="اسم المنتج"
                                        Binding="{Binding Name}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="سعر البيع"
                                        Binding="{Binding SalePrice}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="سعر الشراء"
                                        Binding="{Binding BuyPrice}"
                                        Width="100"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="الكمية"
                                        Binding="{Binding Quantity}"
                                        Width="80"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="SKU"
                                        Binding="{Binding SKU}"
                                        Width="120"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <DataGridTextColumn Header="الصنف"
                                        Binding="{Binding Category}"
                                        Width="150"
                                        ElementStyle="{StaticResource CenteredTextStyle}"/>

                    <!-- Edit -->
                    <DataGridTemplateColumn Header="تعديل" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✏"
                                        Width="30"
                                        Height="30"
                                        Click="EditProduct_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Delete -->
                    <DataGridTemplateColumn Header="حذف" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑"
                                        Style="{StaticResource DeleteHoverRedButtonStyle}"
                                        Click="DeleteProduct_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ================= Pagination ================= -->
        <StackPanel Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,16,0,0">

            <Button Content="التالي"
            Width="100"
            Margin="0,0,10,0"
            Click="NextPage_Click"/>

            <TextBlock x:Name="PageTextBlock"
               Margin="10,0"
               VerticalAlignment="Center"
               FontWeight="SemiBold"/>

            <Button Content="السابق"
            Width="100"
            Margin="10,0,0,0"
            Click="PrevPage_Click"/>
        </StackPanel>


        <!-- ================= Error ================= -->
        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="4"
                   Foreground="Red"
                   Visibility="Collapsed"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Page>
