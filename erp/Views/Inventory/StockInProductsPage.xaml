<Page x:Class="erp.Views.Inventory.StockInProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">
        <Border Style="{StaticResource CardStyle}"
                Width="600"
                HorizontalAlignment="Center">

            <StackPanel Margin="20">

                <!-- ===== Top Bar ===== -->
                <DockPanel Margin="0,0,0,20">
                    <Button Content="⬅ رجوع"
                            Width="90"
                            Style="{StaticResource DarkButtonStyle}"
                            Click="Back_Click"/>

                    <TextBlock Text="تحديث كمية منتجات"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="12,0,0,0"/>
                </DockPanel>

                <!-- ===== Supplier Name ===== -->
                <TextBlock Text="اسم المورد"
                           Margin="0,0,0,4"/>

                <!-- ✅ البوردر المضاف -->
                <Border BorderBrush="#CBD5E1"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="6">
                    <TextBox x:Name="SupplierNameTextBox"
                             Style="{StaticResource GlowTextBox}"/>
                </Border>

                <!-- ===== Products Grid ===== -->
                <TextBlock Text="المنتجات"
                           Margin="0,16,0,6"
                           FontWeight="Bold"/>

                <DataGrid x:Name="ProductsGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          HeadersVisibility="Column"
                          Height="240">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="اسم المنتج"
                                            Binding="{Binding productname}"
                                            Width="*"/>

                        <DataGridTextColumn Header="الكمية"
                                            Binding="{Binding quantity}"
                                            Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- ===== Execute Button ===== -->
                <Button Content="تنفيذ التحديث"
                        Width="160"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Execute_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
