<Page x:Class="erp.Views.Inventory.InventoryCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Page.Resources>

        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <Style x:Key="ResultCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SoftBorderBrush}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="⬅ رجوع"
                    Width="100"
                    Style="{StaticResource DarkButtonStyle}"
                    Click="Back_Click"/>

            <TextBlock Grid.Column="1"
                       Text="جرد المخزون"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- ================= Form ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource GlowingTableOuterBorder}"
                Width="650"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <!-- اسم المنتج -->
                <TextBlock Text="اسم المنتج"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ProductNameTextBox"
                         Height="36"
                         Margin="0,0,0,16"/>

                <!-- كود المنتج -->
                <TextBlock Text="كود المنتج"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ProductIdTextBox"
                         Height="36"
                         Margin="0,0,0,16"/>

                <!-- الكمية الفعلية -->
                <TextBlock Text="الكمية الفعلية"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ActualQuantityTextBox"
                         Height="36"
                         FlowDirection="LeftToRight"
                         Margin="0,0,0,16"/>

                <!-- Update Stock -->
                <TextBlock Text="هل تريد تحديث الكمية في المخزون؟"
                           FontWeight="Bold"
                           Margin="0,0,0,6"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton x:Name="UpdateYesRadio"
                                 Content="نعم"
                                 IsChecked="True"
                                 Margin="0,0,20,0"/>
                    <RadioButton x:Name="UpdateNoRadio"
                                 Content="لا"/>
                </StackPanel>

                <!-- Execute -->
                <Button Content="تنفيذ الجرد"
                        Width="160"
                        Height="40"
                        HorizontalAlignment="Left"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Adjust_Click"/>

                <!-- ================= Result ================= -->
                <Border x:Name="ResultCard"
                        Visibility="Collapsed"
                        Margin="0,24,0,0"
                        Style="{StaticResource ResultCardStyle}">

                    <StackPanel>

                        <TextBlock x:Name="ResultTitleText"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="ResultMessageText"
                                   Margin="0,0,0,8"/>

                        <TextBlock x:Name="OldQuantityText"/>
                        <TextBlock x:Name="NewQuantityText"/>

                        <TextBlock x:Name="FinancialImpactText"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

    </Grid>
</Page>
