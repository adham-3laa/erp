<Page x:Class="EduGate.Views.Inventory.InventoryCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">
        <Border Style="{StaticResource CardStyle}"
                Width="480"
                HorizontalAlignment="Center">

            <StackPanel Margin="20">

                <!-- ===== Top Bar ===== -->
                <DockPanel Margin="0,0,0,20">
                    <Button Content="⬅ رجوع"
                            Width="90"
                            DockPanel.Dock="Left"
                            Style="{StaticResource DarkButtonStyle}"
                            Click="Back_Click"/>

                    <TextBlock Text="جرد المخزون"
                               FontSize="22"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </DockPanel>

                <!-- Product Name -->
                <TextBlock Text="اسم المنتج"/>
                <Border BorderBrush="#CBD5E1"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="6">
                    <TextBox x:Name="ProductNameTextBox"
                             Style="{StaticResource GlowTextBox}"/>
                </Border>

                <!-- Actual Quantity -->
                <TextBlock Text="الكمية الفعلية"
                           Margin="0,10,0,0"/>
                <Border BorderBrush="#CBD5E1"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="6">
                    <TextBox x:Name="ActualQuantityTextBox"
                             Style="{StaticResource GlowTextBox}"/>
                </Border>

                <!-- Update Stock Choice -->
                <TextBlock Text="هل تريد تحديث الكمية في المخزون؟"
                           Margin="0,16,0,6"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="UpdateYesRadio"
                                 Content="نعم"
                                 Margin="0,0,20,0"
                                 IsChecked="True"/>
                    <RadioButton x:Name="UpdateNoRadio"
                                 Content="لا"/>
                </StackPanel>

                <!-- Execute Button -->
                <Button Content="تنفيذ الجرد"
                        Width="140"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="Adjust_Click"/>

                <!-- ===== Result Card ===== -->
                <Border x:Name="ResultCard"
                        Visibility="Collapsed"
                        Margin="0,24,0,0"
                        Padding="16"
                        CornerRadius="8"
                        BorderThickness="1">

                    <StackPanel>
                        <TextBlock x:Name="ResultTitleText"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="ResultMessageText"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>

                        <TextBlock x:Name="OldQuantityText"
                                   FontSize="13"/>

                        <TextBlock x:Name="NewQuantityText"
                                   FontSize="13"/>

                        <TextBlock x:Name="FinancialImpactText"
                                   FontSize="13"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Page>
