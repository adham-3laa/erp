<Page x:Class="EduGate.Views.Inventory.InventoryCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Page.Resources>

        <!-- ===== Glow (same design we agreed on) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Outer Frame (same as AddExpensePage) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ===== Result Card Style (keeps your logic, just styling) ===== -->
        <Style x:Key="ResultCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SoftBorderBrush}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <!-- Title on the RIGHT, Back button on the LEFT -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Right: section label/title -->
            <TextBlock Grid.Column="0"
                       Text="جرد المخزون"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>

            <!-- Center spacer -->
            <Border Grid.Column="1" Opacity="0"/>

            <!-- Left: back button -->
            <Button Grid.Column="2"
                    Content="رجوع"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    HorizontalAlignment="Left"
                    Click="Back_Click"/>
        </Grid>

        <!-- ================= Form (Centered + agreed design) ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource GlowingTableOuterBorder}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border Style="{StaticResource InnerCardContainer}"
                    Width="620"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0">

                <StackPanel>

                    <!-- Product ID -->
                    <TextBlock Text="كود المنتج"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox x:Name="ProductIdTextBox"
                                     Height="36"
                                     Padding="8"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>
                    </Border>

                    <!-- Actual Quantity -->
                    <TextBlock Text="الكمية الفعلية"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,20,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox x:Name="ActualQuantityTextBox"
                                     Height="36"
                                     Padding="8"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Left"
                                     FlowDirection="LeftToRight"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>
                    </Border>

                    <!-- Execute Button (on the LEFT) -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                Margin="0,32,0,0">

                        <Button Content="تنفيذ الجرد"
                                MinWidth="140"
                                Height="40"
                                FontSize="14"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="Adjust_Click"/>
                    </StackPanel>

                    <!-- ===== Result Card (same logic: Visibility/Names unchanged) ===== -->
                    <Border x:Name="ResultCard"
                            Visibility="Collapsed"
                            Margin="0,24,0,0"
                            Style="{StaticResource ResultCardStyle}">

                        <StackPanel>

                            <TextBlock x:Name="ResultTitleText"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextDarkBrush}"
                                       Margin="0,0,0,10"/>

                            <TextBlock x:Name="ResultMessageText"
                                       FontSize="14"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,0,0,8"/>

                            <TextBlock x:Name="OldQuantityText"
                                       FontSize="13"
                                       Foreground="{StaticResource TextMutedBrush}"/>

                            <TextBlock x:Name="NewQuantityText"
                                       FontSize="13"
                                       Foreground="{StaticResource TextMutedBrush}"/>

                            <TextBlock x:Name="FinancialImpactText"
                                       FontSize="13"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Border>
        </Border>

    </Grid>
</Page>
