<Page x:Class="erp.Views.Inventory.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="20">
        <Border Style="{StaticResource GlowGradientFrame}"
                HorizontalAlignment="Center"
                Width="560">

            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Top Bar -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ===== Top Bar ===== -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,14">

                        <Button Content="⬅ رجوع"
                                Width="90"
                                DockPanel.Dock="Left"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="Back_Click"/>

                        <TextBlock Text="تعديل المنتج"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </DockPanel>

                    <!-- اسم المنتج -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="اسم المنتج"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Name}"/>
                    </StackPanel>

                    <!-- سعر البيع -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="سعر البيع"/>
                        <TextBox x:Name="SalePriceTextBox"
                                 Style="{StaticResource GlowTextBox}"
                                 Text="{Binding SalePrice}"/>
                    </StackPanel>

                    <!-- سعر الشراء -->
                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <TextBlock Text="سعر الشراء"/>
                        <TextBox x:Name="BuyPriceTextBox"
                                 Style="{StaticResource GlowTextBox}"
                                 Text="{Binding BuyPrice}"/>
                    </StackPanel>

                    <!-- الكمية -->
                    <StackPanel Grid.Row="4" Margin="0,10,0,0">
                        <TextBlock Text="الكمية"/>
                        <TextBox x:Name="QuantityTextBox"
                                 Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Quantity}"/>
                    </StackPanel>

                    <!-- اسم الصنف (بدل Category ID) -->
                    <StackPanel Grid.Row="5" Margin="0,10,0,0">
                        <TextBlock Text="اسم الصنف"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Category}"/>
                    </StackPanel>

                    <!-- الوصف -->
                    <StackPanel Grid.Row="6" Margin="0,10,0,0">
                        <TextBlock Text="الوصف"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Description}"
                                 Height="80"
                                 AcceptsReturn="True"/>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="7"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">

                        <Button Content="حفظ التعديلات"
                                Width="140"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="Save_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
