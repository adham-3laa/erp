<Page x:Class="EduGate.Views.Inventory.AddNewItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:EduGate.Views.Inventory"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="20">
        <!-- تعريف الصفوف -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- TopBar -->
            <RowDefinition Height="*"/>
            <!-- محتوى الصفحة -->
        </Grid.RowDefinitions>

        <!-- ✅ TopBar ثابت -->
        <local:InventoryTopBar x:Name="InventoryTopBarControl" Grid.Row="0"/>

        <!-- محتوى إضافة المنتج -->
        <Border Grid.Row="1"
                Style="{StaticResource GlowGradientFrame}"
                HorizontalAlignment="Center"
                Width="720">

            <Border Style="{StaticResource InnerCardContainer}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="إضافة منتج جديد"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,16"/>

                    <!-- Row 1 -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="اسم المنتج" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Style="{StaticResource GlowTextBox}"
                                             Text="{Binding Name}"/>
                                </Border>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="SKU" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Style="{StaticResource GlowTextBox}"
                                             Text="{Binding SKU}"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2 -->
                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="سعر البيع" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Style="{StaticResource GlowTextBox}"
                                             Text="{Binding SalePrice}"/>
                                </Border>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="سعر الشراء" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Style="{StaticResource GlowTextBox}"
                                             Text="{Binding BuyPrice}"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Row 3 -->
                    <Grid Grid.Row="3" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="الكمية" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Style="{StaticResource GlowTextBox}"
                                             Text="{Binding Quantity}"/>
                                </Border>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="المورد" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <ComboBox ItemsSource="{Binding Suppliers}"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="Id"
                                              SelectedValue="{Binding SupplierId}"
                                              Background="Transparent"
                                              BorderThickness="0"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Row 4 -->
                    <Grid Grid.Row="4" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="وصف المنتج" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <TextBox Height="90"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             Style="{StaticResource GlowTextBox}"
                                             Text="{Binding Description}"/>
                                </Border>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="الصنف" Foreground="#6B7280"/>
                            <Border Style="{StaticResource GlowInputFrame}">
                                <Border Style="{StaticResource GlowInputInner}">
                                    <ComboBox ItemsSource="{Binding Categories}"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="Id"
                                              SelectedValue="{Binding CategoryId}"
                                              Background="Transparent"
                                              BorderThickness="0"/>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Actions -->
                    <StackPanel Grid.Row="5"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">
                        <Button Content="حفظ"
                                Style="{StaticResource DarkButtonStyle}"
                                MinWidth="120"
                                Click="SaveProduct_Click"/>

                    </StackPanel>

                </Grid>

            </Border>
        </Border>

    </Grid>
</Page>
