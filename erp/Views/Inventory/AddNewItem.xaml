<Page x:Class="EduGate.Views.Inventory.AddNewItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="20">
        <Border Style="{StaticResource GlowGradientFrame}"
                Width="720"
                HorizontalAlignment="Center">

            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ===== STEP 1 : Button only ===== -->
                    <StackPanel x:Name="IntroPanel"
                                HorizontalAlignment="Center"
                                Margin="0,20">

                        <Button Content="إدخال عدد المنتجات"
                                Width="220"
                                Height="40"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="ShowCount_Click"/>
                    </StackPanel>

                    <!-- ===== STEP 1.5 : Count Input ===== -->
                    <StackPanel x:Name="CountPanel"
                                Visibility="Collapsed"
                                HorizontalAlignment="Center"
                                Margin="0,20">

                        <TextBlock Text="أدخل عدد المنتجات"
                                   FontSize="16"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Center"/>

                        <TextBox x:Name="CountTextBox"
                                 Width="200"
                                 Style="{StaticResource GlowTextBox}"
                                 HorizontalContentAlignment="Center"/>

                        <Button Content="ابدأ"
                                Width="120"
                                Margin="0,10,0,0"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="StartWizard_Click"/>
                    </StackPanel>

                    <!-- ===== STEP 2 : Product Form ===== -->
                    <StackPanel x:Name="FormPanel"
                                Grid.Row="1"
                                Visibility="Collapsed"
                                Margin="0,10">

                        <TextBlock x:Name="StepTitle"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="اسم المنتج"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Name}"/>

                        <TextBlock Text="SKU"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding SKU}"/>

                        <TextBlock Text="سعر البيع"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding SalePrice}"/>

                        <TextBlock Text="سعر الشراء"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding BuyPrice}"/>

                        <TextBlock Text="الكمية"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Quantity}"/>

                        <TextBlock Text="اسم الصنف"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Text="{Binding Category}"/>

                        <TextBlock Text="الوصف"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Text="{Binding Description}"/>
                        <TextBlock Text="Supplier ID"/>
                        <TextBox Style="{StaticResource GlowTextBox}"
         Text="{Binding Supplier}"/>

                    </StackPanel>

                    <!-- ===== ACTIONS ===== -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10">

                        <Button Content="رجوع"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="Prev_Click"/>

                        <Button x:Name="NextBtn"
                                Content="التالي"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="Next_Click"/>

                        <Button x:Name="SaveBtn"
                                Content="حفظ"
                                Width="100"
                                Visibility="Collapsed"
                                Click="Save_Click"/>
                    </StackPanel>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
