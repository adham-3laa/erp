<Page x:Class="EduGate.Views.Inventory.AddNewItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="20">
        <Border Style="{StaticResource GlowGradientFrame}"
                Width="720"
                HorizontalAlignment="Center">

            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Top Bar -->
                        <RowDefinition Height="*"/>
                        <!-- Content -->
                        <RowDefinition Height="Auto"/>
                        <!-- Actions -->
                    </Grid.RowDefinitions>

                    <!-- ================= TOP BAR ================= -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,12">

                        <Button Content="⬅ رجوع"
                                Width="100"
                                DockPanel.Dock="Left"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="Back_Click"/>

                        <TextBlock Text="إضافة منتجات"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </DockPanel>

                    <!-- ================= STEP 1 : Intro ================= -->
                    <StackPanel x:Name="IntroPanel"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="0,20">

                        <Button Content="إدخال عدد المنتجات"
                                Width="240"
                                Height="42"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="ShowCount_Click"/>
                    </StackPanel>

                    <!-- ================= STEP 1.5 : Supplier + Count ================= -->
                    <StackPanel x:Name="CountPanel"
                                Grid.Row="1"
                                Visibility="Collapsed"
                                HorizontalAlignment="Center"
                                Margin="0,20">

                        <TextBlock Text="Supplier ID" Margin="0,0,0,4"/>

                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox x:Name="SupplierIdTextBox"
                                     Width="280"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>

                        <TextBlock Text="عدد المنتجات" Margin="10,10,0,4"/>

                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox x:Name="CountTextBox"
                                     Width="180"
                                     HorizontalContentAlignment="Center"
                                     Style="{StaticResource GlowTextBox}"/>
                        </Border>

                        <Button Content="ابدأ"
                                Width="120"
                                Margin="0,14,0,0"
                                Style="{StaticResource DarkButtonStyle}"
                                Click="StartWizard_Click"/>
                    </StackPanel>

                    <!-- ================= STEP 2 : Product Form ================= -->
                    <StackPanel x:Name="FormPanel"
                                Grid.Row="1"
                                Visibility="Collapsed"
                                Margin="0,10">

                        <TextBlock x:Name="StepTitle"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="اسم المنتج"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Name}"/>
                        </Border>

                        <TextBlock Text="SKU" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding SKU}"/>
                        </Border>

                        <TextBlock Text="سعر البيع" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding SalePrice}"/>
                        </Border>

                        <TextBlock Text="سعر الشراء" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding BuyPrice}"/>
                        </Border>

                        <TextBlock Text="الكمية" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Quantity}"/>
                        </Border>

                        <TextBlock Text="اسم الصنف" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Category}"/>
                        </Border>

                        <TextBlock Text="الوصف" Margin="0,8,0,0"/>
                        <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="6" Padding="6">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Height="80"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Text="{Binding Description}"/>
                        </Border>
                    </StackPanel>

                    <!-- ================= ACTIONS ================= -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,14,0,0">

                        <Button Content="رجوع"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="Prev_Click"/>

                        <Button x:Name="NextBtn"
                                Content="التالي"
                                Width="100"
                                Margin="0,0,10,0"
                                Click="Next_Click"/>

                        <Button x:Name="SaveBtn"
                                Content="حفظ"
                                Width="100"
                                Visibility="Collapsed"
                                Click="Save_Click"/>
                    </StackPanel>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
