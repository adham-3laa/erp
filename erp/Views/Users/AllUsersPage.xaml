<UserControl x:Class="erp.Views.Users.AllUsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:erp.Converters"
             xmlns:local="clr-namespace:erp.Views.Users"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- تعريف الموارد المحلية إذا لم تكن موجودة في App.xaml -->
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E1B4B"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#111827"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SoftBorderBrush" Color="#E8EAF2"/>
        <SolidColorBrush x:Key="PageBgBrush" Color="#F5F6FA"/>

        <!-- Converters -->
        <converters:InitialsConverter x:Key="InitialsConverter"/>
        <converters:StatusTooltipConverter x:Key="StatusTooltipConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- محول InverseBool بديل بسيط -->

        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource PageBgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- استبدال Top Bar بـ UsersTopBar -->
        <local:UsersTopBar Grid.Row="0"/>

        <!-- Filters -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBrush}"
                CornerRadius="14"
                BorderThickness="1"
                BorderBrush="{StaticResource SoftBorderBrush}"
                Padding="16"
                Margin="16,8,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- User Type Filter -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="نوع المستخدم"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding UserTypes}"
                              SelectedItem="{Binding SelectedUserType}"
                              Height="38"
                              FontSize="14"
                              Padding="8"
                              BorderThickness="1"
                              BorderBrush="{StaticResource SoftBorderBrush}"
                              Background="White">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="الحالة"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding SelectedIsActive}"
                              Height="38"
                              FontSize="14"
                              Padding="8"
                              BorderThickness="1"
                              BorderBrush="{StaticResource SoftBorderBrush}"
                              Background="White"/>
                </StackPanel>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="{StaticResource PrimaryBrush}" 
                            Padding="12,8"
                            Margin="8,0"
                            CornerRadius="10">
                        <TextBlock Text="{Binding TotalCount, StringFormat='إجمالي: {0}'}"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                    </Border>

                    <Border Background="{StaticResource SuccessGreenBrush}" 
                            Padding="12,8"
                            Margin="8,0"
                            CornerRadius="10">
                        <TextBlock Text="{Binding ActiveCount, StringFormat='نشط: {0}'}"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Users List -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBrush}"
                CornerRadius="14"
                BorderThickness="1"
                BorderBrush="{StaticResource SoftBorderBrush}"
                Padding="16"
                Margin="16,0,16,16">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80FFFFFF"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Panel.ZIndex="100">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
                        <TextBlock Text="جاري تحميل المستخدمين..." 
                                   Margin="0,12,0,0"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Users Grid -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <!-- ItemsControl for Users -->
                        <ItemsControl ItemsSource="{Binding Users}" Margin="0,0,0,4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" 
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource SoftBorderBrush}"
                                            Background="White"
                                            CornerRadius="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- User Avatar -->
                                            <Border Grid.Column="0" 
                                                    Width="60" 
                                                    Height="60"
                                                    Margin="16"
                                                    CornerRadius="30"
                                                    Background="{StaticResource PrimaryBrush}">
                                                <TextBlock Text="{Binding Converter={StaticResource InitialsConverter}}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- User Info -->
                                            <StackPanel Grid.Column="1" Margin="8,12">

                                                <!-- Full Name -->
                                                <TextBlock Text="{Binding Fullname}"
               FontSize="16"
               FontWeight="SemiBold"
               Foreground="{StaticResource TextDarkBrush}"/>

                                                <!-- ✅ User ID (Selectable & Copyable) -->
                                                <TextBox Text="{Binding Id}"
             FontSize="11"
             Foreground="{StaticResource TextMutedBrush}"
             Background="Transparent"
             BorderThickness="0"
             IsReadOnly="True"
             IsReadOnlyCaretVisible="False"
             Padding="0"
             Margin="0,2,0,4"
             Cursor="IBeam"
             ToolTip="اضغط واسحب لنسخ الـ ID"/>

                                                <!-- Details -->
                                                <WrapPanel Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding UserType}"
                   Foreground="{StaticResource PrimaryBrush}"
                   FontWeight="Medium"
                   Margin="0,0,12,0"/>

                                                    <materialDesign:PackIcon Kind="Email"
                                 Width="14"
                                 Height="14"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Email}"
                   Foreground="{StaticResource TextMutedBrush}"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>

                                                    <materialDesign:PackIcon Kind="Phone"
                                 Width="14"
                                 Height="14"
                                 Foreground="{StaticResource TextMutedBrush}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Phonenumber}"
                   Foreground="{StaticResource TextMutedBrush}"
                   VerticalAlignment="Center"/>
                                                </WrapPanel>

                                                <TextBlock Text="{Binding DateOfCreation, StringFormat='تاريخ التسجيل: {0:yyyy-MM-dd}'}"
               FontSize="12"
               Foreground="{StaticResource TextMutedBrush}"
               Margin="0,4,0,0"/>
                                            </StackPanel>


                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16">
                                                <!-- Status Toggle -->
                                                <ToggleButton
    IsChecked="{Binding IsActive, Mode=OneWay}"
    IsEnabled="{Binding DataContext.IsLoading,
                RelativeSource={RelativeSource AncestorType=UserControl},
                Converter={StaticResource InverseBoolConverter}}"
    Command="{Binding DataContext.ToggleStatusCommand,
              RelativeSource={RelativeSource AncestorType=UserControl}}"
    CommandParameter="{Binding Id}"
    ToolTip="{Binding IsActive, Converter={StaticResource StatusTooltipConverter}}"
    Width="60"
    Height="32"
    Margin="0,0,8,0">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border x:Name="Bd"
                                                                                CornerRadius="10"
                                                                                Background="{TemplateBinding Background}"
                                                                                BorderThickness="1"
                                                                                BorderBrush="{StaticResource SoftBorderBrush}">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- Active State -->
                                                                                <Border x:Name="ActivePart"
                                                                                        Grid.Column="0"
                                                                                        CornerRadius="9"
                                                                                        Background="{StaticResource SuccessGreenBrush}">
                                                                                    <TextBlock Text="نشط"
                                                                                               Foreground="White"
                                                                                               HorizontalAlignment="Center"
                                                                                               VerticalAlignment="Center"
                                                                                               FontWeight="Medium"/>
                                                                                </Border>

                                                                                <!-- Inactive State -->
                                                                                <Border x:Name="InactivePart"
                                                                                        Grid.Column="1"
                                                                                        CornerRadius="9"
                                                                                        Background="{StaticResource SoftBorderBrush}">
                                                                                    <TextBlock Text="غير نشط"
                                                                                               Foreground="{StaticResource TextMutedBrush}"
                                                                                               HorizontalAlignment="Center"
                                                                                               VerticalAlignment="Center"
                                                                                               FontWeight="Medium"/>
                                                                                </Border>

                                                                                <!-- Thumb -->
                                                                                <Border x:Name="Thumb"
                                                                                        Width="50"
                                                                                        Height="28"
                                                                                        CornerRadius="8"
                                                                                        Background="White"
                                                                                        HorizontalAlignment="Left"
                                                                                        Margin="3">
                                                                                    <!-- لا نستخدم Effect هنا -->
                                                                                </Border>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                                <Setter TargetName="InactivePart" Property="Background" Value="{StaticResource SoftBorderBrush}"/>
                                                                                <Setter TargetName="ActivePart" Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsChecked" Value="False">
                                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Left"/>
                                                                                <Setter TargetName="InactivePart" Property="Background" Value="{StaticResource ErrorRedBrush}"/>
                                                                                <Setter TargetName="ActivePart" Property="Background" Value="{StaticResource SoftBorderBrush}"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                </ToggleButton>

                                                <!-- Edit Button -->
                                                <Button Command="{Binding DataContext.EditUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="تعديل المستخدم"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        Foreground="White"
                                                        Margin="0,0,8,0"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                                </Button>

                                                <!-- Delete Button -->
                                                <Button Command="{Binding DataContext.DeleteUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="حذف المستخدم"
                                                        Background="{StaticResource ErrorRedBrush}"
                                                        Foreground="White"
                                                        Margin="0,0,8,0"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                                </Button>

                                                <!-- View Button -->
                                                <Button Command="{Binding DataContext.ViewUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="عرض التفاصيل"
                                                        Background="{StaticResource SuccessGreenBrush}"
                                                        Foreground="White"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State (Centered) - أبسط طريقة -->
                        <TextBlock Text="لا توجد مستخدمين لعرضهم"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Visibility="Collapsed">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsLoading}" Value="False"/>
                                                <Condition Binding="{Binding Users.Count}" Value="0"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination -->
        <Border Grid.Row="3" 
                Background="{StaticResource CardBrush}"
                CornerRadius="14"
                BorderThickness="1"
                BorderBrush="{StaticResource SoftBorderBrush}"
                Padding="16"
                Margin="16,0,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Page Info -->
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="الصفحة {0} من {1}">
                            <Binding Path="CurrentPage"/>
                            <Binding Path="TotalPages"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!-- Pagination Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding HasPreviousPage}"
                            Margin="0,0,4,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <materialDesign:PackIcon Kind="ChevronRight"/>
                    </Button>

                    <Button Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding HasNextPage}"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <materialDesign:PackIcon Kind="ChevronLeft"/>
                    </Button>
                </StackPanel>

                <!-- Items Per Page -->
                <ComboBox Grid.Column="2"
                          SelectedIndex="1"
                          HorizontalAlignment="Right"
                          Width="120"
                          Height="38"
                          FontSize="14"
                          Padding="8"
                          BorderThickness="1"
                          BorderBrush="{StaticResource SoftBorderBrush}"
                          Background="White">
                    <ComboBoxItem Content="10 عناصر"/>
                    <ComboBoxItem Content="20 عناصر"/>
                    <ComboBoxItem Content="50 عناصر"/>
                    <ComboBoxItem Content="100 عنصر"/>
                </ComboBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>