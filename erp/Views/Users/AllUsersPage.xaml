<UserControl x:Class="erp.Views.Users.AllUsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:erp.Converters"
             xmlns:local="clr-namespace:erp.Views.Users"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- تعريف الموارد المحلية -->
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E1B4B"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#111827"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SoftBorderBrush" Color="#E8EAF2"/>
        <SolidColorBrush x:Key="PageBgBrush" Color="#F5F6FA"/>

        <!-- Converters -->
        <converters:InitialsConverter x:Key="InitialsConverter"/>
        <converters:StatusTooltipConverter x:Key="StatusTooltipConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource PageBgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- استبدال Top Bar بـ UsersTopBar -->
        <local:UsersTopBar Grid.Row="0" Loaded="UsersTopBar_Loaded"/>

        <!-- Filters -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBrush}"
                CornerRadius="14"
                BorderThickness="1"
                BorderBrush="{StaticResource SoftBorderBrush}"
                Padding="16"
                Margin="16,8,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- User Type Filter - تم التعديل -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="نوع المستخدم"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding UserTypes}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding SelectedUserType}"
                              Height="38"
                              FontSize="14"
                              Padding="8"
                              BorderThickness="1"
                              BorderBrush="{StaticResource SoftBorderBrush}"
                              Background="White"/>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="الحالة"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding SelectedIsActive}"
                              Height="38"
                              FontSize="14"
                              Padding="8"
                              BorderThickness="1"
                              BorderBrush="{StaticResource SoftBorderBrush}"
                              Background="White"/>
                </StackPanel>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="{StaticResource PrimaryBrush}" 
                            Padding="12,8"
                            Margin="8,0"
                            CornerRadius="10">
                        <TextBlock Text="{Binding TotalCount, StringFormat='إجمالي: {0}'}"
                                   Foreground="White"
                                   FontWeight="Medium"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Users List -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBrush}"
                CornerRadius="14"
                BorderThickness="1"
                BorderBrush="{StaticResource SoftBorderBrush}"
                Padding="16"
                Margin="16,0,16,16">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80FFFFFF"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Panel.ZIndex="100">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
                        <TextBlock Text="جاري تحميل المستخدمين..." 
                                   Margin="0,12,0,0"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Users Grid -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <!-- ItemsControl for Users -->
                        <ItemsControl ItemsSource="{Binding Users}" Margin="0,0,0,4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" 
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource SoftBorderBrush}"
                                            Background="White"
                                            CornerRadius="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- User Avatar -->
                                            <Border Grid.Column="0" 
                                                    Width="60" 
                                                    Height="60"
                                                    Margin="16"
                                                    CornerRadius="30"
                                                    Background="{StaticResource PrimaryBrush}">
                                                <TextBlock Text="{Binding Converter={StaticResource InitialsConverter}}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- User Info -->
                                            <StackPanel Grid.Column="1" Margin="8,12">
                                                <!-- Full Name -->
                                                <TextBlock Text="{Binding Fullname}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextDarkBrush}"/>

                                                <!-- User ID -->
                                                <TextBox Text="{Binding Id}"
                                                         FontSize="11"
                                                         Foreground="{StaticResource TextMutedBrush}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         IsReadOnly="True"
                                                         IsReadOnlyCaretVisible="False"
                                                         Padding="0"
                                                         Margin="0,2,0,4"
                                                         Cursor="IBeam"
                                                         ToolTip="اضغط واسحب لنسخ الـ ID"/>

                                                <!-- Details -->
                                                <WrapPanel Margin="0,4,0,0">
                                                    <!-- تم التعديل هنا لاستخدام DisplayUserType -->
                                                    <TextBlock Text="{Binding DisplayUserType}"
                                                               Foreground="{StaticResource PrimaryBrush}"
                                                               FontWeight="Medium"
                                                               Margin="0,0,12,0"/>

                                                    <materialDesign:PackIcon Kind="Email"
                                                                              Width="14"
                                                                              Height="14"
                                                                              Foreground="{StaticResource TextMutedBrush}"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Email}"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"/>

                                                    <materialDesign:PackIcon Kind="Phone"
                                                                              Width="14"
                                                                              Height="14"
                                                                              Foreground="{StaticResource TextMutedBrush}"
                                                                              VerticalAlignment="Center"
                                                                              Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Phonenumber}"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               VerticalAlignment="Center"/>
                                                </WrapPanel>

                                                <TextBlock Text="{Binding DateOfCreation, StringFormat='تاريخ التسجيل: {0:yyyy-MM-dd}'}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16">
                                                <!-- Status Toggle -->
                                                <ToggleButton
                                                    IsChecked="{Binding IsActive, Mode=OneWay}"
                                                    IsEnabled="{Binding DataContext.IsLoading,
                                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                                        Converter={StaticResource InverseBoolConverter}}"
                                                    Command="{Binding DataContext.ToggleStatusCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Id}"
                                                    ToolTip="{Binding IsActive, Converter={StaticResource StatusTooltipConverter}}"
                                                    Width="120"
                                                    Height="34"
                                                    Margin="0,0,8,0">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border x:Name="Bd"
                                                                                CornerRadius="8"
                                                                                Background="{TemplateBinding Background}"
                                                                                BorderThickness="1"
                                                                                BorderBrush="{StaticResource SoftBorderBrush}">
                                                                            <Grid>
                                                                                <!-- Thumb المتحرك -->
                                                                                <Border x:Name="Thumb"
                                                                                        Width="58"
                                                                                        Height="30"
                                                                                        CornerRadius="7"
                                                                                        Background="White"
                                                                                        HorizontalAlignment="Left"
                                                                                        Margin="3"
                                                                                        VerticalAlignment="Center">
                                                                                    <Border.Effect>
                                                                                        <DropShadowEffect ShadowDepth="1" 
                                                                                                          BlurRadius="3" 
                                                                                                          Opacity="0.1"/>
                                                                                    </Border.Effect>
                                                                                    <TextBlock x:Name="ThumbText"
                                                                                               Text="نشط"
                                                                                               Foreground="{StaticResource SuccessGreenBrush}"
                                                                                               FontWeight="SemiBold"
                                                                                               HorizontalAlignment="Center"
                                                                                               VerticalAlignment="Center"/>
                                                                                </Border>

                                                                                <!-- الخلفية الثابتة -->
                                                                                <Border x:Name="BackgroundTrack"
                                                                                        CornerRadius="7"
                                                                                        Background="{StaticResource SoftBorderBrush}"
                                                                                        Margin="2"/>

                                                                                <!-- النص الخلفي الثابت -->
                                                                                <TextBlock x:Name="TrackText"
                                                                                           Text="غير نشط"
                                                                                           Foreground="{StaticResource TextMutedBrush}"
                                                                                           FontWeight="Medium"
                                                                                           HorizontalAlignment="Right"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,0,14,0"/>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <!-- حالة النشط -->
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                                <Setter TargetName="BackgroundTrack" Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                                                                                <Setter TargetName="TrackText" Property="HorizontalAlignment" Value="Left"/>
                                                                                <Setter TargetName="TrackText" Property="Margin" Value="14,0,0,0"/>
                                                                                <Setter TargetName="TrackText" Property="Text" Value="نشط"/>
                                                                                <Setter TargetName="TrackText" Property="Foreground" Value="White"/>
                                                                                <Setter TargetName="ThumbText" Property="Text" Value="غير نشط"/>
                                                                                <Setter TargetName="ThumbText" Property="Foreground" Value="{StaticResource ErrorRedBrush}"/>
                                                                            </Trigger>

                                                                            <!-- حالة غير النشط -->
                                                                            <Trigger Property="IsChecked" Value="False">
                                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Left"/>
                                                                                <Setter TargetName="BackgroundTrack" Property="Background" Value="{StaticResource SoftBorderBrush}"/>
                                                                                <Setter TargetName="TrackText" Property="HorizontalAlignment" Value="Right"/>
                                                                                <Setter TargetName="TrackText" Property="Margin" Value="0,0,14,0"/>
                                                                                <Setter TargetName="TrackText" Property="Text" Value="غير نشط"/>
                                                                                <Setter TargetName="TrackText" Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                                                <Setter TargetName="ThumbText" Property="Text" Value="نشط"/>
                                                                                <Setter TargetName="ThumbText" Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                </ToggleButton>

                                                <!-- Edit Button -->
                                                <Button Command="{Binding DataContext.EditUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="تعديل المستخدم"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        Foreground="White"
                                                        Margin="0,0,8,0"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                                </Button>

                                                <!-- Delete Button -->
                                                <Button Command="{Binding DataContext.DeleteUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="حذف المستخدم"
                                                        Background="{StaticResource ErrorRedBrush}"
                                                        Foreground="White"
                                                        Margin="0,0,8,0"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                                </Button>

                                                <!-- View Button -->
                                                <Button Command="{Binding DataContext.ViewUserCommand, 
                                                             RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding Id}"
                                                        ToolTip="عرض التفاصيل"
                                                        Background="{StaticResource SuccessGreenBrush}"
                                                        Foreground="White"
                                                        Width="32"
                                                        Height="32">
                                                    <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                                </Button>

                                                <!-- User Invoices Button -->
                                                <Button Command="{Binding DataContext.ViewUserInvoicesCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="سجل الفواتير"
                                                        Background="#0EA5E9"
                                                        Foreground="White"
                                                        Width="32"
                                                        Height="32"
                                                        Margin="10,0,0,0">
                                                    <materialDesign:PackIcon Kind="FileDocumentMultiple" Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <TextBlock Text="لا توجد مستخدمين لعرضهم"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   Visibility="Collapsed">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsLoading}" Value="False"/>
                                                <Condition Binding="{Binding Users.Count}" Value="0"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination -->
    </Grid>
</UserControl>