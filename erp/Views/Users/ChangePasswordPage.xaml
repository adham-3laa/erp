<Window x:Class="erp.Views.Users.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="تغيير كلمة المرور"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="PasswordBoxBindingStyle" TargetType="PasswordBox">
            <Setter Property="materialDesign:HintAssist.Hint" Value="أدخل كلمة المرور"/>
            <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="KeyChange"
                                     Width="40"
                                     Height="40"
                                     Foreground="#1E1B4B"
                                     HorizontalAlignment="Center"/>
            <TextBlock Text="تغيير كلمة المرور"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#111827"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
            <TextBlock Text="قم بتغيير كلمة المرور لحسابك الشخصي"
                       FontSize="14"
                       Foreground="#6B7280"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- المحتوى -->
        <Grid Grid.Row="1">

            <!-- Loading -->
            <Border Background="#80000000"
                    Panel.ZIndex="1000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Loading"
                                             Width="32"
                                             Height="32"
                                             Foreground="White"/>
                    <TextBlock Text="جاري تغيير كلمة المرور..."
                               Foreground="White"
                               Margin="0,8,0,0"
                               FontSize="12"/>
                </StackPanel>
            </Border>

            <StackPanel>

                <!-- Error -->
                <Border Background="#FEE2E2"
                        BorderBrush="#EF4444"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#7F1D1D"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Success -->
                <Border Background="#D1FAE5"
                        BorderBrush="#10B981"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasSuccess, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding SuccessMessage}"
                               Foreground="#065F46"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- New Password -->
                <TextBlock Text="كلمة المرور الجديدة"
                           FontSize="13"
                           Margin="0,0,0,4"/>

                <PasswordBox x:Name="NewPasswordBox"
                             PasswordChanged="NewPasswordBox_PasswordChanged"
                             Style="{StaticResource PasswordBoxBindingStyle}"
                             Margin="0,0,0,12"/>

                <!-- Confirm -->
                <TextBlock Text="تأكيد كلمة المرور الجديدة"
                           FontSize="13"
                           Margin="0,0,0,4"/>

                <PasswordBox x:Name="ConfirmPasswordBox"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                             Style="{StaticResource PasswordBoxBindingStyle}"
                             Margin="0,0,0,20"/>

            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <Button Content="إلغاء"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"/>

            <Button Content="تغيير"
                    Command="{Binding ChangePasswordCommand}"
                    Width="120"
                    Height="36"
                    Background="#1E1B4B"
                    Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>
