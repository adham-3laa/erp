<UserControl x:Class="erp.Views.Users.UsersTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="1000">

    <Border Background="{StaticResource CardBrush}"
            CornerRadius="16"
            Padding="16"
            Effect="{StaticResource CardShadow}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountGroup"
                                         Width="24"
                                         Height="24"
                                         Foreground="{StaticResource PrimaryBrush}"
                                         Margin="0,0,8,0"/>
                <TextBlock Text="إدارة المستخدمين"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextDarkBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Search Box -->
            <Border Grid.Column="1"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="{StaticResource SoftBorderBrush}"
                    Margin="16,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">

                <Grid>

                    <!-- TextBox الحقيقي -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="14"
                             Padding="12,8,36,8"
                             Foreground="{StaticResource TextDarkBrush}"
                             CaretBrush="{StaticResource PrimaryBrush}"
                             VerticalContentAlignment="Center"/>

                    <!-- Placeholder -->
                    <TextBlock Text="ابحث عن مستخدم..."
                               Margin="12,0,36,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextMutedBrush}"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Search Icon -->
                    <materialDesign:PackIcon Kind="Magnify"
                                             Width="20"
                                             Height="20"
                                             HorizontalAlignment="Right"
                                             Margin="0,0,12,0"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource TextMutedBrush}"/>
                </Grid>
            </Border>

            <!-- Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">

                <!-- Add User -->
                <Button Style="{StaticResource DarkButtonStyle}"
                        Click="AddUserButton_Click"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="مستخدم جديد"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Users List -->

                <!-- Current User -->
                <Button Style="{StaticResource DarkButtonStyle}"
                        Click="CurrentUserButton_Click">
                    <TextBlock Text="المستخدم الحالي"
                               VerticalAlignment="Center"/>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
