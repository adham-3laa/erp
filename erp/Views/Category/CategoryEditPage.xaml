<Page x:Class="erp.Views.Category.CategoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:erp.ViewModels.CategoryView"
      xmlns:nav="clr-namespace:System.Windows.Navigation;assembly=PresentationFramework"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      nav:JournalEntry.KeepAlive="False"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Grid Margin="20">
        <!-- Outer Glow -->
        <Border Style="{StaticResource GlowGradientFrame}"
                HorizontalAlignment="Center"
                Width="620">

            <!-- Inner Card -->
            <Border Style="{StaticResource InnerCardContainer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="إضافة صنف جديد"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEdit}" Value="True">
                                        <Setter Property="Text" Value="تعديل الصنف"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Error -->
                    <TextBlock Grid.Row="1"
                               Margin="0,10,0,0"
                               Foreground="Tomato"
                               Text="{Binding Error}"
                               Visibility="{Binding Error, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

                    <!-- Name -->
                    <StackPanel Grid.Row="2" Margin="0,14,0,0">
                        <TextBlock Text="الاسم" Foreground="#6B7280" Margin="0,0,0,6"/>

                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox Style="{StaticResource GlowTextBox}"
                                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                            </Border>
                        </Border>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Grid.Row="3" Margin="0,12,0,0">
                        <TextBlock Text="الوصف" Foreground="#6B7280" Margin="0,0,0,6"/>

                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox Style="{StaticResource GlowTextBox}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Height="110"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                            </Border>
                        </Border>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,16,0,0">

                        <Button Content="حفظ"
                                Style="{StaticResource DarkButtonStyle}"
                                MinWidth="120"
                                Command="{Binding SaveCommand}"/>

                        <Button Content="رجوع"
                                Style="{StaticResource DarkButtonStyle}"
                                MinWidth="120"
                                Margin="10,0,0,0"
                                Click="Back_Click"/>
                    </StackPanel>

                    <!-- Loading Overlay -->
                    <Border Background="#66000000"
                            CornerRadius="18"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar Width="240" Height="10" IsIndeterminate="True"/>
                            <TextBlock Text="جارٍ الحفظ..."
                                       Margin="0,10,0,0"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
