                                        <TextBlock Text="{Binding NetBalance, StringFormat=N2}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#111827"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Balance Description -->
                            <Border Margin="0,20,0,0"
                                    CornerRadius="10"
                                    Padding="16"
                                    Background="#F3F4F6">
                                
                                <TextBlock Text="{Binding BalanceDescription}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center"
                                           Foreground="#1F2937"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
