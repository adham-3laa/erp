<Page x:Class="erp.Views.Invoices.InvoiceDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Title ================= -->
        <TextBlock Grid.Row="0"
                   Text="تفاصيل الفاتورة"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextDarkBrush}"
                   Margin="0,0,0,20"/>

        <!-- ================= Content ================= -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <!-- ================= Invoice Info ================= -->
                <Border Style="{StaticResource CardStyle}"
                        Margin="0,0,0,20">

                    <UniformGrid Columns="2" Margin="16">

                        <TextBlock Text="نوع الفاتورة" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Type}"/>

                        <TextBlock Text="المستلم" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding RecipientName}"/>

                        <TextBlock Text="الإجمالي" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Amount}"/>

                        <TextBlock Text="المدفوع" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding PaidAmount}"/>

                        <TextBlock Text="المتبقي" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding RemainingAmount}"/>

                        <TextBlock Text="تاريخ الإنشاء" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding GeneratedDate}"/>
                    </UniformGrid>
                </Border>

                <!-- ================= Actions ================= -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,16">

                    <!-- زر الدفع -->
                    <Button x:Name="PayButton"
                            Content="💰 دفع"
                            Width="160"
                            Margin="0,0,12,0"
                            Style="{StaticResource DarkButtonStyle}"
                            Click="Pay_Click"/>

                    <!-- زر الرجوع -->
                    <Button Content="⬅ رجوع"
                            Width="140"
                            Style="{StaticResource DarkButtonStyle}"
                            Click="Back_Click"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
