<Page x:Class="erp.Views.Invoices.InvoicesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <!-- Title -->
            <RowDefinition Height="Auto"/>

            <!-- Filters -->
            <RowDefinition Height="Auto"/>

            <!-- Table -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Page Title ================= -->
        <TextBlock Grid.Row="0"
                   Text="إدارة الفواتير"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextDarkBrush}"
                   Margin="0,0,0,20"/>

        <!-- ================= Filters ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                    <TextBlock Text="بحث عام"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="2,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Search}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- Invoice Type -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="نوع الفاتورة"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="2,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox Background="Transparent"
                                      BorderThickness="0"
                                      SelectedItem="{Binding InvoiceType}">
                                <ComboBoxItem Content="CustomerInvoice"/>
                                <ComboBoxItem Content="SalesRepInvoice"/>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- Query -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                    <TextBlock Text="رقم الطلب / اسم المستلم"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="2,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Query}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- From Date -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="من تاريخ"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="2,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker Background="Transparent"
                                        BorderThickness="0"
                                        SelectedDate="{Binding FromDate}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- To Date -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="إلى تاريخ"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               Margin="2,0,0,6"/>

                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker Background="Transparent"
                                        BorderThickness="0"
                                        SelectedDate="{Binding ToDate}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- Search Button -->
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text=" " Margin="0,0,0,6"/>
                    <Button Content="بحث"
                            Style="{StaticResource DarkButtonStyle}"
                            Command="{Binding LoadInvoicesCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= Invoices Table ================= -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DataGrid -->
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Invoices}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          ColumnWidth="*"
                          MouseDoubleClick="InvoicesGrid_DoubleClick">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="النوع" Binding="{Binding Type}" />
                        <DataGridTextColumn Header="المستلم" Binding="{Binding RecipientName}" />
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding Amount}" />
                        <DataGridTextColumn Header="المدفوع" Binding="{Binding PaidAmount}" />
                        <DataGridTextColumn Header="المتبقي" Binding="{Binding RemainingAmount}" />
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding GeneratedDate}" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0">

                    <Button Content="⟨ Previous"
                            Style="{StaticResource DarkButtonStyle}"
                            Margin="6,0"
                            Command="{Binding PreviousPageCommand}"/>

                    <Border Padding="14,6"
                            CornerRadius="10"
                            Background="{StaticResource PageBgBrush}"
                            Margin="6,0">
                        <TextBlock Text="{Binding Page}"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <Button Content="Next ⟩"
                            Style="{StaticResource DarkButtonStyle}"
                            Margin="6,0"
                            Command="{Binding NextPageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
