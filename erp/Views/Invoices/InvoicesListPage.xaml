<Page x:Class="erp.Views.Invoices.InvoicesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,20">

            <TextBlock Text="إدارة الفواتير" 
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>


        </StackPanel>

        <!-- ================= Filters ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 🔍 بحث عام -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                    <TextBlock Text="بحث عام" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Search}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 🧾 نوع الفاتورة -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="نوع الفاتورة" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding InvoiceType}">
                                <ComboBoxItem Content="فواتير العملاء"/>
                                <ComboBoxItem Content="فواتير العمولات"/>
                                <ComboBoxItem Content="فواتير الموردين"/>
                                <ComboBoxItem Content="فواتير المرتجعات"/>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 🆔 رقم الطلب -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                    <TextBlock Text="رقم الطلب" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding OrderId}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 👤 رقم / اسم المستلم -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="رقم أو اسم المستلم" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding RecipientQuery}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 📅 من تاريخ -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="من تاريخ" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding FromDate}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 📅 إلى تاريخ + آخر فاتورة -->
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="إلى تاريخ" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}" Margin="0,0,0,8">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding ToDate}"/>
                        </Border>
                    </Border>

                    <TextBlock Text="آخر فاتورة" Padding="0,0,0,5"
                               Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding IsLastInvoice}">
                                <ComboBoxItem Content=""/>
                                <ComboBoxItem Content="نعم"/>
                                <ComboBoxItem Content="لا"/>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🔎 زر البحث -->
        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,24"
                Content="بحث"
                Width="120"
                Style="{StaticResource DarkButtonStyle}"
                Command="{Binding LoadInvoicesCommand}"/>

        <!-- ================= Table ================= -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Invoices}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          ColumnWidth="*"
                          Style="{StaticResource ProDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ProDataGridHeaderStyle}"
                          RowStyle="{StaticResource ProDataGridRowStyle}"
                          CellStyle="{StaticResource ProDataGridCellStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="النوع" Binding="{Binding Type}"/>
                        <DataGridTextColumn Header="المستلم" Binding="{Binding RecipientName}"/>
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding Amount}"/>
                        <DataGridTextColumn Header="المدفوع" Binding="{Binding PaidAmount}"/>
                        <DataGridTextColumn Header="المتبقي" Binding="{Binding RemainingAmount}"/>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding GeneratedDate}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                    <Button Content="السابق"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>

                    <TextBlock Text="{Binding Page}"
                               Margin="16,0"
                               VerticalAlignment="Center"/>

                    <Button Content="التالي"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
