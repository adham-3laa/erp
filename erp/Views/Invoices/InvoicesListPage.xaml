<Page x:Class="erp.Views.Invoices.InvoicesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}"
      Loaded="Page_Loaded">

    <Page.Resources>

        <!-- ===== Glow (needed for old table frame) ===== -->
        <DropShadowEffect x:Key="PrimaryOutlineGlow"
                          Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- ===== Old Table Frame (our design) ===== -->
        <Style x:Key="GlowingTableOuterBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource PrimaryOutlineGlow}"/>
        </Style>

        <!-- ================= DataGrid Styles (our reference) ================= -->

        <Style x:Key="NiceDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF6F6F6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="NiceDataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF1F2937"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="NiceDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE5E7EB"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFCBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NiceDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="CenteredTextColumnElementStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header (Reference Layout) ================= -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="إدارة الفواتير"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#FF1F2937"
                       VerticalAlignment="Center"
                       Margin="0,0,14,0"/>

            <Border Grid.Column="1" Opacity="0"/>

            <Button Grid.Column="2"
                    Content="بحث"
                    Width="120"
                    Style="{StaticResource DarkButtonStyle}"
                    Command="{Binding LoadInvoicesCommand}"/>
        </Grid>

        <!-- ================= Filters (Our Frame) ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource GlowingTableOuterBorder}"
                Margin="0,0,0,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 🔍 بحث عام -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                    <TextBlock Text="بحث عام" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Search}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="نوع الفاتورة" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding InvoiceType}">
                                <sys:String>الكل</sys:String>
                                <sys:String>فواتير العملاء</sys:String>
                                <sys:String>فواتير العمولات</sys:String>
                                <sys:String>فواتير الموردين</sys:String>
                                <sys:String>فواتير المرتجعات</sys:String>
                                <sys:String>فواتير مرتجعات الموردين</sys:String>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 🆔 رقم الطلب -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                    <TextBlock Text="رقم الطلب" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding OrderId}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 👤 اسم المستلم -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="اسم المستلم" Foreground="{StaticResource TextMutedBrush}"/>

                    <Grid>
                        <Border Style="{StaticResource GlowInputFrame}">
                            <Border Style="{StaticResource GlowInputInner}">
                                <TextBox Style="{StaticResource GlowTextBox}"
                         Text="{Binding RecipientQuery, UpdateSourceTrigger=PropertyChanged}"/>
                            </Border>
                        </Border>

                        <!-- Suggestions -->
                        <Border Background="White"
                Margin="0,42,0,0"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasRecipientSuggestions}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasNoRecipientResults}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>

                                <!-- List -->
                                <ListBox ItemsSource="{Binding RecipientSuggestions}"
                         BorderThickness="0"
                         MaxHeight="200">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="10"
                                                 Cursor="Hand"
                                                 MouseLeftButtonUp="RecipientSuggestion_Click">

                                                <Run Text="{Binding BeforeMatch}"/>
                                                <Run Text="{Binding Match}"
                                                    FontWeight="Bold"
                                                    Foreground="DodgerBlue"/>
                                                <Run Text="{Binding AfterMatch}"/>

                                            </TextBlock>

                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <!-- No Results -->
                                <TextBlock Text="لا يوجد أسماء"
                           Foreground="Gray"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           Margin="8">

                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasNoRecipientResults}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>

                                </TextBlock>

                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>


                <!-- 📅 من تاريخ -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="من تاريخ" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding FromDate}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 📅 إلى تاريخ + آخر فاتورة -->
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="إلى تاريخ" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}" Margin="0,0,0,8">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding ToDate}"/>
                        </Border>
                    </Border>

                    <TextBlock Text="آخر فاتورة" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding IsLastInvoice}">
                                <sys:String>الكل</sys:String>
                                <sys:String>نعم</sys:String>
                                <sys:String>لا</sys:String>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= Table (Our Frame + Our DataGrid style) ================= -->
        <Border Grid.Row="2"
                Style="{StaticResource GlowingTableOuterBorder}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Invoices}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          ColumnWidth="*"
                          CanUserResizeColumns="False"
                          MouseDoubleClick="InvoicesGrid_DoubleClick"
                          Style="{StaticResource NiceDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource NiceDataGridHeaderStyle}"
                          RowStyle="{StaticResource NiceDataGridRowStyle}"
                          CellStyle="{StaticResource NiceDataGridCellStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="رقم الفاتورة"
                                            Binding="{Binding code}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="العميل / المورد"
                                            Binding="{Binding DisplayName}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="النوع"
                                            Binding="{Binding Type}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        
                        <DataGridTextColumn Header="المدفوع"
                                            Binding="{Binding PaidAmount, StringFormat=N2}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                        <DataGridTextColumn Header="المتبقي"
                                            Binding="{Binding RemainingAmount, StringFormat=N2}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>
                        
                        <DataGridTextColumn Header="الإجمالي"
                                            Binding="{Binding Amount, StringFormat=N2}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>
                        
                        <DataGridTextColumn Header="التاريخ"
                                            Binding="{Binding GeneratedDate, StringFormat=yyyy-MM-dd}"
                                            Width="*"
                                            ElementStyle="{StaticResource CenteredTextColumnElementStyle}"/>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                    <Button Content="السابق"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>

                    <TextBlock Text="{Binding Page}"
                               Margin="16,0"
                               VerticalAlignment="Center"/>

                    <Button Content="التالي"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>
