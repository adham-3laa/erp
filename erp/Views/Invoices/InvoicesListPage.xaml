<Page x:Class="erp.Views.Invoices.InvoicesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      FlowDirection="RightToLeft"
      Background="{StaticResource PageBgBrush}"
      Loaded="Page_Loaded">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,20">

            <TextBlock Text="إدارة الفواتير"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextDarkBrush}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ================= Filters ================= -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- 🔍 بحث عام -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                    <TextBlock Text="بحث عام" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding Search}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 🧾 نوع الفاتورة -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,12,12">
                    <TextBlock Text="نوع الفاتورة" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding InvoiceType}">
                                <!-- القيم الفعلية -->
                                <sys:String>الكل</sys:String>
                                <sys:String>فواتير العملاء</sys:String>
                                <sys:String>فواتير العمولات</sys:String>
                                <sys:String>فواتير الموردين</sys:String>
                                <sys:String>فواتير المرتجعات</sys:String>
                            </ComboBox>

                        </Border>
                    </Border>
                </StackPanel>

                <!-- 🆔 رقم الطلب -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                    <TextBlock Text="رقم الطلب" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding OrderId}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 👤 المستلم -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="رقم أو اسم المستلم" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <TextBox Style="{StaticResource GlowTextBox}"
                                     Text="{Binding RecipientQuery}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 📅 من تاريخ -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="من تاريخ" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding FromDate}"/>
                        </Border>
                    </Border>
                </StackPanel>

                <!-- 📅 إلى تاريخ + آخر فاتورة -->
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="إلى تاريخ" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}" Margin="0,0,0,8">
                        <Border Style="{StaticResource GlowInputInner}">
                            <DatePicker SelectedDate="{Binding ToDate}"/>
                        </Border>
                    </Border>

                    <TextBlock Text="آخر فاتورة" Foreground="{StaticResource TextMutedBrush}"/>
                    <Border Style="{StaticResource GlowInputFrame}">
                        <Border Style="{StaticResource GlowInputInner}">
                            <ComboBox SelectedItem="{Binding IsLastInvoice}">
                                <sys:String>الكل</sys:String>
                                <sys:String>نعم</sys:String>
                                <sys:String>لا</sys:String>
                            </ComboBox>
                        </Border>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🔎 زر البحث -->
        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,24"
                Content="بحث"
                Width="120"
                Style="{StaticResource DarkButtonStyle}"
                Command="{Binding LoadInvoicesCommand}"/>

        <!-- ================= Table ================= -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ✅ أضف MouseDoubleClick هنا -->
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Invoices}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          ColumnWidth="*"
                          GridLinesVisibility="None"
                          CanUserResizeColumns="False"
                          RowHeight="42"
                          Style="{StaticResource ProDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ProDataGridHeaderStyle}"
                          RowStyle="{StaticResource ProDataGridRowStyle}"
                          CellStyle="{StaticResource ProDataGridCellStyle}"
                          MouseDoubleClick="InvoicesGrid_DoubleClick">

                    <DataGrid.Columns>

                        <!-- النوع -->
                        <DataGridTextColumn Header="النوع"
                            Binding="{Binding Type}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- المستلم -->
                        <DataGridTextColumn Header="المستلم"
                            Binding="{Binding RecipientName}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- الإجمالي -->
                        <DataGridTextColumn Header="الإجمالي"
                            Binding="{Binding Amount, StringFormat=N2}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- المدفوع -->
                        <DataGridTextColumn Header="المدفوع"
                            Binding="{Binding PaidAmount, StringFormat=N2}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- المتبقي -->
                        <DataGridTextColumn Header="المتبقي"
                            Binding="{Binding RemainingAmount, StringFormat=N2}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- التاريخ -->
                        <DataGridTextColumn Header="التاريخ"
                            Binding="{Binding GeneratedDate, StringFormat=yyyy-MM-dd}"
                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>


                <!-- Pagination -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,0">

                    <Button Content="السابق"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>

                    <TextBlock Text="{Binding Page}"
                               Margin="16,0"
                               VerticalAlignment="Center"/>

                    <Button Content="التالي"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource DarkButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
