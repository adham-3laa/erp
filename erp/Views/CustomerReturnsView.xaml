<Page x:Class="erp.Views.Returns.CustomerReturnsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft">

    <StackPanel Margin="16">

        <TextBlock Text="طلب مرتجع"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <!-- Order Id -->
        <TextBox Text="{Binding OrderId}"
         Height="38"
         Margin="0,0,0,8"
         ToolTip="رقم الطلب"/>


        <Button Content="جلب الأصناف"
                Command="{Binding LoadItemsCommand}"
                Width="140"
                Margin="0,0,0,12"/>

        <!-- Items -->
        <DataGrid ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="الصنف"
                                    Binding="{Binding ProductId}"
                                    Width="*"/>
                <DataGridTextColumn Header="الكمية"
                                    Binding="{Binding Quantity}"
                                    Width="120"/>
                <DataGridTextColumn Header="سبب الإرجاع"
                                    Binding="{Binding Reason}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="إرسال طلب المرتجع"
                Command="{Binding SubmitReturnCommand}"
                Margin="0,12,0,0"
                Width="180"/>
    </StackPanel>
</Page>
