<Page x:Class="erp.Views.Dashboard.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:erp.ViewModels.Dashboard"
      Background="{StaticResource PageBgBrush}"
      FlowDirection="RightToLeft">

    <Page.DataContext>
        <vm:DashboardViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Summary Card Style -->
        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y"
                                               To="-2" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y"
                                               To="0" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Hero Card Style -->
        <Style x:Key="HeroCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Table Card Style -->
        <Style x:Key="TableCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="3" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quantity Badge Style -->
        <Style x:Key="QuantityBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DashboardDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="56"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFC"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DashboardHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>

        <Style x:Key="DashboardRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2,0,0,1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="#F1F5F9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="#F1F5F9"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="3,0,0,1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DashboardCellStyle" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==================== Header ==================== -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="📊 لوحة التحكم"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1E293B"/>
                <TextBlock Text="نظرة عامة على أداء النظام اليوم"
                           FontSize="14"
                           Foreground="#64748B"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="🔄 تحديث البيانات"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource DarkButtonStyle}"
                    Width="160"
                    ToolTip="احصل على أحدث البيانات من النظام"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- ==================== Statistics Cards ==================== -->
        <Grid Grid.Row="1" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Sales Today -->
            <Border Grid.Column="0" Style="{StaticResource SummaryCard}" Background="#EFF6FF"
                    ToolTip="إجمالي قيمة المبيعات المسجلة منذ منتصف الليل">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0" To="1" Duration="0:0:0.3"
                                               BeginTime="0:0:0.0">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#DBEAFE" 
                            CornerRadius="14" 
                            Width="56" Height="56"
                            Margin="0,0,16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TotalSalesToday}" Value="0">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <materialDesign:PackIcon Kind="CashMultiple" 
                                                   Width="28" Height="28" 
                                                   Foreground="#2563EB"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="إجمالي مبيعات اليوم"
                                   FontSize="13"
                                   Foreground="#64748B"
                                   FontWeight="Medium"/>
                        <TextBlock FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#1E40AF"
                                   Margin="0,6,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding TotalSalesToday, StringFormat='{}{0:N0} ج.م'}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalSalesToday}" Value="0">
                                            <Setter Property="Text" Value="0 ج.م"/>
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Context-aware helper text -->
                        <TextBlock FontSize="11"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="نشاط مبيعات نشط"/>
                                    <Setter Property="Foreground" Value="#60A5FA"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalSalesToday}" Value="0">
                                            <Setter Property="Text" Value="لا يوجد نشاط مبيعات اليوم"/>
                                            <Setter Property="Foreground" Value="#93C5FD"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Profit Today -->
            <Border Grid.Column="1" Style="{StaticResource SummaryCard}" Background="#ECFDF5"
                    ToolTip="صافي الربح المحقق من المبيعات منذ منتصف الليل">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0" To="1" Duration="0:0:0.3"
                                               BeginTime="0:0:0.05">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#D1FAE5" 
                            CornerRadius="14" 
                            Width="56" Height="56"
                            Margin="0,0,16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TotalProfitToday}" Value="0">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <materialDesign:PackIcon Kind="TrendingUp" 
                                                   Width="28" Height="28" 
                                                   Foreground="#059669"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="إجمالي ربح اليوم"
                                   FontSize="13"
                                   Foreground="#64748B"
                                   FontWeight="Medium"/>
                        <TextBlock FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#047857"
                                   Margin="0,6,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding TotalProfitToday, StringFormat='{}{0:N0} ج.م'}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalProfitToday}" Value="0">
                                            <Setter Property="Text" Value="0 ج.م"/>
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Context-aware helper text -->
                        <TextBlock FontSize="11"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="أرباح محققة"/>
                                    <Setter Property="Foreground" Value="#34D399"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalProfitToday}" Value="0">
                                            <Setter Property="Text" Value="لا توجد أرباح محققة اليوم"/>
                                            <Setter Property="Foreground" Value="#6EE7B7"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Approved Orders Today -->
            <Border Grid.Column="2" Style="{StaticResource SummaryCard}" Background="#FDF4FF"
                    ToolTip="عدد الطلبات التي تم تأكيدها منذ منتصف الليل">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0" To="1" Duration="0:0:0.3"
                                               BeginTime="0:0:0.1">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#F3E8FF" 
                            CornerRadius="14" 
                            Width="56" Height="56"
                            Margin="0,0,16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ApprovedOrdersCountToday}" Value="0">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <materialDesign:PackIcon Kind="CheckboxMarkedCircle" 
                                                   Width="28" Height="28" 
                                                   Foreground="#9333EA"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="عدد الطلبات المعتمدة"
                                   FontSize="13"
                                   Foreground="#64748B"
                                   FontWeight="Medium"/>
                        <TextBlock FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#7C3AED"
                                   Margin="0,6,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding ApprovedOrdersCountToday, StringFormat='{}{0} طلب'}"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ApprovedOrdersCountToday}" Value="0">
                                            <Setter Property="Text" Value="0 طلب"/>
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Context-aware helper text -->
                        <TextBlock FontSize="11"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="طلبات معتمدة"/>
                                    <Setter Property="Foreground" Value="#C084FC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ApprovedOrdersCountToday}" Value="0">
                                            <Setter Property="Text" Value="لا توجد طلبات معتمدة اليوم"/>
                                            <Setter Property="Foreground" Value="#D8B4FE"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== Main Content Area ==================== -->
        <ScrollViewer Grid.Row="2" Margin="0,24,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Error Banner -->
                <Border Visibility="{Binding Error, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"
                        Background="#FEF2F2" 
                        BorderBrush="#FCA5A5" 
                        BorderThickness="1.5" 
                        CornerRadius="14" 
                        Padding="20" 
                        Margin="8,0,8,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <materialDesign:PackIcon Grid.Column="0" 
                                                   Kind="AlertCircle" 
                                                   Foreground="#DC2626" 
                                                   Width="28" Height="28" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,14,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="⚠️ حدث خطأ أثناء تحميل البيانات" 
                                       FontSize="15" 
                                       FontWeight="Bold" 
                                       Foreground="#DC2626"/>
                            <TextBlock Text="{Binding Error}" 
                                       FontSize="13" 
                                       Foreground="#DC2626" 
                                       TextWrapping="Wrap" 
                                       Margin="0,6,0,4"
                                       Opacity="0.9"/>
                            <TextBlock Text="• تحقق من اتصالك بالشبكة أو حاول مرة أخرى" 
                                       FontSize="12" 
                                       Foreground="#EF4444" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" 
                                Content="🔄 إعادة المحاولة" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource DarkButtonStyle}"
                                Background="#DC2626"
                                Width="140"
                                Height="40"
                                FontWeight="SemiBold"
                                ToolTip="انقر لإعادة تحميل البيانات"
                                VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Low Stock Products Section -->
                <Border Style="{StaticResource TableCard}" Margin="8,0">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.3"
                                                   BeginTime="0:0:0.15">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Background="#FEF3C7" CornerRadius="12" Width="44" Height="44" Margin="0,0,14,0">
                                    <materialDesign:PackIcon Kind="AlertOutline" 
                                                               Width="24" Height="24" 
                                                               Foreground="#D97706"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="المنتجات منخفضة المخزون"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#1E293B"/>
                                    <TextBlock Text="المنتجات التي تحتاج إلى إعادة تعبئة"
                                               FontSize="11"
                                               Foreground="#64748B"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="2" 
                                    Background="#FEF3C7" 
                                    CornerRadius="12" 
                                    Padding="14,8"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding LowStockCount}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#92400E"
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="منتج" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="#B45309"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Data Content -->
                        <Grid Grid.Row="1">
                            
                            <!-- DataGrid - With Products -->
                            <DataGrid ItemsSource="{Binding LowStockProducts}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      ColumnWidth="*"
                                      Style="{StaticResource DashboardDataGridStyle}"
                                      ColumnHeaderStyle="{StaticResource DashboardHeaderStyle}"
                                      RowStyle="{StaticResource DashboardRowStyle}"
                                      CellStyle="{StaticResource DashboardCellStyle}"
                                      CanUserAddRows="False"
                                      MaxHeight="450"
                                      Visibility="{Binding HasLowStockProducts, Converter={StaticResource BoolToVisibilityConverter}}">

                                <DataGrid.Columns>
                                    <!-- Product Details (Icon + Name + Code + SKU) -->
                                    <DataGridTemplateColumn Header="المنتج" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="8,0">
                                                    <!-- Product Icon -->
                                                    <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1"
                                                            CornerRadius="12" Width="48" Height="48" Margin="0,0,16,0">
                                                        <materialDesign:PackIcon Kind="PackageVariant" 
                                                                                 Width="24" Height="24" 
                                                                                 Foreground="#64748B" 
                                                                                 HorizontalAlignment="Center" 
                                                                                 VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Product Text Info -->
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ProductName}" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="15" 
                                                                   Foreground="#1E293B"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        
                                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                            <TextBlock Text="{Binding ProductCode, StringFormat='#{0}'}" 
                                                                       FontSize="12" 
                                                                       Foreground="#64748B" 
                                                                       FontFamily="Consolas, Segoe UI"/>
                                                            
                                                            <TextBlock Text=" • " 
                                                                       FontSize="12" 
                                                                       Foreground="#CBD5E1" 
                                                                       Margin="6,0"
                                                                       Visibility="{Binding Sku, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                                                            
                                                            <TextBlock Text="{Binding Sku}" 
                                                                       FontSize="12" 
                                                                       Foreground="#64748B"
                                                                       FontFamily="Consolas, Segoe UI"
                                                                       Visibility="{Binding Sku, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Current Quantity & Status -->
                                    <DataGridTemplateColumn Header="المخزون الحالي" Width="Auto" MinWidth="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="8" Padding="16,8" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <!-- Default: Warning (6-10+ units) -->
                                                            <Setter Property="Background" Value="#FFF7ED"/>
                                                            <Setter Property="BorderBrush" Value="#FFEDD5"/>
                                                            <Setter Property="BorderThickness" Value="1"/>
                                                            <Setter Property="ToolTip" Value="مخزون منخفض - يُنصح بإعادة التعبئة قريباً"/>
                                                            <Style.Triggers>
                                                                <!-- Urgent: 1-5 units -->
                                                                <DataTrigger Binding="{Binding CurrentQuantity, Converter={StaticResource QuantityLessThanConverter}, ConverterParameter=6}" Value="True">
                                                                    <Setter Property="Background" Value="#FFF4ED"/>
                                                                    <Setter Property="BorderBrush" Value="#FB923C"/>
                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                    <Setter Property="ToolTip" Value="عاجل! المخزون منخفض جداً - أعد التعبئة فوراً"/>
                                                                </DataTrigger>
                                                                <!-- Critical: 0 units -->
                                                                <DataTrigger Binding="{Binding CurrentQuantity}" Value="0">
                                                                    <Setter Property="Background" Value="#FEF2F2"/>
                                                                    <Setter Property="BorderBrush" Value="#EF4444"/>
                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                    <Setter Property="ToolTip" Value="حرج! نفد المخزون - يتطلب إجراء فوري"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <!-- Warning Icon with dynamic color -->
                                                        <materialDesign:PackIcon Width="16" Height="16" 
                                                                                 Margin="0,0,8,0"
                                                                                 VerticalAlignment="Center">
                                                            <materialDesign:PackIcon.Style>
                                                                <Style TargetType="materialDesign:PackIcon">
                                                                    <!-- Default: Warning -->
                                                                    <Setter Property="Kind" Value="AlertCircleOutline"/>
                                                                    <Setter Property="Foreground" Value="#EA580C"/>
                                                                    <Style.Triggers>
                                                                        <!-- Urgent: 1-5 units -->
                                                                        <DataTrigger Binding="{Binding CurrentQuantity, Converter={StaticResource QuantityLessThanConverter}, ConverterParameter=6}" Value="True">
                                                                            <Setter Property="Kind" Value="Alert"/>
                                                                            <Setter Property="Foreground" Value="#F97316"/>
                                                                        </DataTrigger>
                                                                        <!-- Critical: 0 units -->
                                                                        <DataTrigger Binding="{Binding CurrentQuantity}" Value="0">
                                                                            <Setter Property="Kind" Value="AlertOctagon"/>
                                                                            <Setter Property="Foreground" Value="#DC2626"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </materialDesign:PackIcon.Style>
                                                        </materialDesign:PackIcon>

                                                        <!-- Text with dynamic content -->
                                                        <TextBlock FontWeight="Bold" FontSize="14" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <!-- Default: show quantity -->
                                                                    <Setter Property="Text" Value="{Binding CurrentQuantity, StringFormat='{}{0} قطعة'}"/>
                                                                    <Setter Property="Foreground" Value="#C2410C"/>
                                                                    <Style.Triggers>
                                                                        <!-- Urgent: 1-5 units -->
                                                                        <DataTrigger Binding="{Binding CurrentQuantity, Converter={StaticResource QuantityLessThanConverter}, ConverterParameter=6}" Value="True">
                                                                            <Setter Property="Foreground" Value="#EA580C"/>
                                                                        </DataTrigger>
                                                                        <!-- Critical: 0 units -->
                                                                        <DataTrigger Binding="{Binding CurrentQuantity}" Value="0">
                                                                            <Setter Property="Text" Value="نفد من المخزون"/>
                                                                            <Setter Property="Foreground" Value="#B91C1C"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Empty State - No Low Stock Products -->
                            <Border Visibility="{Binding HasLowStockProducts, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                    Background="#F0FDF4" 
                                    CornerRadius="16" 
                                    Padding="48" 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,20">
                                <StackPanel HorizontalAlignment="Center">
                                    <Border Background="#DCFCE7" CornerRadius="50" Width="96" Height="96" Margin="0,0,0,20">
                                        <materialDesign:PackIcon Kind="CheckCircle" 
                                                                   Width="56" Height="56" 
                                                                   Foreground="#16A34A"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="✅ جميع المنتجات متوفرة!" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#15803D" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="المخزون مُدار بشكل ممتاز 🎯" 
                                               FontSize="14" 
                                               Foreground="#16A34A" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,8,0,0"/>
                                    <TextBlock Text="لا توجد منتجات منخفضة المخزون حالياً" 
                                               FontSize="12" 
                                               Foreground="#4ADE80" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ==================== Loading Overlay ==================== -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#F0FFFFFF" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <BlurEffect Radius="4"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="White" CornerRadius="20" Padding="48,40" Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="56" Height="56" 
                                     Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                        <TextBlock Text="جاري تحميل البيانات..." 
                                   Margin="0,24,0,0" 
                                   Foreground="#334155" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="يرجى الانتظار لحظات..." 
                                   Margin="0,8,0,0" 
                                   Foreground="#94A3B8" 
                                   FontSize="13" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
