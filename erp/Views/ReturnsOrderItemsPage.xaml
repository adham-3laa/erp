<Page x:Class="erp.Views.Returns.ReturnsOrderItemsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Returns Order Items">

    <Grid>
        <!-- Content Area -->
        <StackPanel Margin="20">
            <!-- OrderId TextBox for input with watermark (Watermark as Placeholder) -->
            <TextBox x:Name="OrderIdTextBoxInput" Width="300" Margin="0,0,0,10" Height="35" VerticalAlignment="Top">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <!-- Watermark for TextBox when it's empty -->
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}, Mode=OneWay}" Value="">
                                <Setter Property="ToolTip" Value="أدخل رقم الطلب" />
                                <Setter Property="Foreground" Value="Gray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Load Button -->
            <Button Content="تحميل العناصر" Command="{Binding LoadCommand}" Margin="0,0,0,10" Height="40" VerticalAlignment="Top" Background="#4CAF50" Foreground="White" Click="Load_Click"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,10" />

            <!-- DataGrid for displaying order items -->
            <DataGrid ItemsSource="{Binding OrderItems}" AutoGenerateColumns="False" Margin="0,20,0,0" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding Productid}" Width="*" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*" />
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding Unitprice}" Width="*" />
                    <DataGridTextColumn Header="Customer ID" Binding="{Binding Customerid}" Width="*" />
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Productname}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons for actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="عودة" Width="100" Height="40" Background="#FF6200EE" Foreground="White" Click="Back_Click"/>
                <Button Content="إنشاء إرجاع" Width="150" Height="40" Background="#FF6200EE" Foreground="White" Margin="10,0,0,0" Click="CreateReturn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
