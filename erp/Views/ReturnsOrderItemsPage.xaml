<Page x:Class="erp.Views.Returns.ReturnsOrderItemsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="المرتجعات"
      FlowDirection="RightToLeft">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== إدخال رقم الطلب ===== -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="رقم الطلب:" VerticalAlignment="Center"/>
            <TextBox x:Name="OrderIdTextBox"
                     Width="350"
                     Margin="10,0,10,0"/>
            <Button Content="تحميل"
                    Width="80"
                    Click="Load_Click"/>
        </StackPanel>

        <!-- ===== الأصناف ===== -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding OrderItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCC"
                                BorderThickness="1"
                                Padding="10"
                                Margin="0,6">
                            <StackPanel>

                                <!-- رقم الصنف -->
                                <TextBlock Text="{Binding ProductId}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,4"/>

                                <!-- الكمية والسعر -->
                                <TextBlock>
                                    <Run Text="الكمية: "/>
                                    <Run Text="{Binding Quantity}"/>
                                    <Run Text="   السعر: "/>
                                    <Run Text="{Binding UnitPrice}"/>
                                </TextBlock>

                                <!-- كمية المرتجع -->
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="كمية المرتجع:"
                                               Width="100"
                                               VerticalAlignment="Center"/>
                                    <TextBox Width="60"
                                             Text="{Binding ReturnQuantity,
                                             UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <!-- سبب الإرجاع -->
                                <TextBlock Text="سبب الإرجاع"
                                           Margin="0,8,0,2"/>

                                <TextBox Text="{Binding Reason,
                                        UpdateSourceTrigger=PropertyChanged}"
                                         Height="30"/>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Page>
