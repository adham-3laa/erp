<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EduGate">

    <!-- =========================
         Colors
    ========================== -->
    <Color x:Key="PrimaryColor">#1E1B4B</Color>
    <Color x:Key="PrimaryHover">#312E81</Color>
    <Color x:Key="PrimaryPressed">#0F172A</Color>

    <!-- Gradient Colors (حسب طلبك) -->
    <Color x:Key="G0">#0F172A</Color>
    <Color x:Key="G1">#1E1B4B</Color>
    <Color x:Key="G2">#312E81</Color>

    <!-- =========================
         Brushes
    ========================== -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHover}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressed}"/>

    <SolidColorBrush x:Key="CardBrush" Color="White"/>
    <SolidColorBrush x:Key="PageBgBrush" Color="#F5F6FA"/>

    <!-- Gradient Brush (اللي هيتستخدم في الإطارات) -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource G0}" Offset="0"/>
        <GradientStop Color="{StaticResource G1}" Offset="0.55"/>
        <GradientStop Color="{StaticResource G2}" Offset="1"/>
    </LinearGradientBrush>

    <!-- =========================
         Shadows
    ========================== -->
    <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="6" Opacity="0.18"/>
    <DropShadowEffect x:Key="SoftShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.12"/>

    <!-- =========================
         BUTTONS (كما هي عندك)
    ========================== -->
    <Style x:Key="DarkButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="38"/>
        <Setter Property="Padding" Value="18,0"/>
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="14">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================
         ✅ OUTER PAGE FRAME (Glowing Gradient)
    ========================== -->
    <Style x:Key="GlowGradientFrame" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{StaticResource G2}"
                    BlurRadius="36"
                    ShadowDepth="0"
                    Opacity="0.40"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InnerCardContainer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="22"/>
    </Style>

    <!-- =========================
         ✅ GLOW INPUT WRAPPER (Border)  -> تستخدمه حوالين TextBox/PasswordBox
    ========================== -->
    <Style x:Key="GlowInputFrame" TargetType="Border">
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="1.6"/>
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    Color="{StaticResource G2}"
                    BlurRadius="18"
                    ShadowDepth="0"
                    Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Inner input surface -->
    <Style x:Key="GlowInputInner" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- =========================
         ✅ TextBox + PasswordBox (نسخة نظيفة تلائم الـ Glow Wrapper)
         *مهم*: BorderThickness = 0 لأن الإطار برا
    ========================== -->
    <Style x:Key="GlowTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#111827"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GlowPasswordBox" TargetType="PasswordBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#111827"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
