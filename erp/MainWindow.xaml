<Window x:Class="EduGate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EduGate.Views.Accountants"
        Title="EduGate"
        Height="720"
        Width="1280"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>

        <!-- Shadows -->
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="20" ShadowDepth="6" Opacity="0.22"/>

        <!-- Sidebar Item Style -->
        <Style x:Key="NavItemStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="52"/>
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                CornerRadius="14"
                                Background="Transparent"
                                Padding="14,10">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Text -->
        <Style x:Key="NavTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#F2F4FF"/>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B3B5B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F1F33"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Outer Glass Background -->
    <Border CornerRadius="22"
            Background="#F5F6FA"
            Effect="{StaticResource SoftShadow}"
            SnapsToDevicePixels="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="290"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR (Gradient + Brand) -->
            <Border Grid.Column="0" CornerRadius="22,0,0,22">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0F172A" Offset="0"/>
                        <GradientStop Color="#1E1B4B" Offset="0.55"/>
                        <GradientStop Color="#312E81" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Window Drag Area + Title -->
                    <Border Grid.Row="0" Background="Transparent" Padding="18" MouseLeftButtonDown="Window_DragMove">
                        <StackPanel>
                            <TextBlock Text="EduGate" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Smart ERP Dashboard" Foreground="#B6C2FF" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Quick Stats -->
                    <Border Grid.Row="1" Margin="14,0,14,10" CornerRadius="16" Background="#22FFFFFF" Padding="14">
                        <StackPanel>
                            <TextBlock Text="نظرة سريعة" Foreground="#E9ECFF" FontWeight="SemiBold"/>
                            <TextBlock Text="إدارة المخزون • فواتير • طلبات • محاسبين"
                                       Foreground="#B6C2FF" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- NAV -->
                    <ListBox Grid.Row="2"
                             x:Name="NavListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemContainerStyle="{StaticResource NavItemStyle}">

                        <ListBoxItem Tag="Users">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="👤 المستخدمين"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Accountants">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🧮 المحاسبين"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Inventory">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="📦 المخزون"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Invoices">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🧾 الفواتير"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Orders">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🛒 الطلبات"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Expenses">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="💰 المصروفات"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Categories">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🏷️ الأصناف"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Suppliers">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🚚 الموردين"/>
                        </ListBoxItem>

                        <ListBoxItem Tag="Auth">
                            <TextBlock Style="{StaticResource NavTextStyle}" Text="🔐 المصادقة"/>
                        </ListBoxItem>

                    </ListBox>

                    <!-- Bottom Actions -->
                    <Border Grid.Row="3" Background="#14FFFFFF" Padding="14">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource PrimaryButton}" Content="—" Width="46" Click="Minimize_Click" Margin="6,0"/>
                            <Button Style="{StaticResource PrimaryButton}" Content="▢" Width="46" Click="Maximize_Click" Margin="6,0"/>
                            <Button Style="{StaticResource PrimaryButton}" Content="✕" Width="46" Background="#B42318" Click="Close_Click" Margin="6,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Column="1" Margin="18">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header (Card) -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="18"
                        Padding="16"
                        Effect="{StaticResource SoftShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="340"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="PageTitleText"
                                       Text="لوحة التحكم"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#111827"/>
                            <TextBlock Text="تابع كل شيء من مكان واحد"
                                       Foreground="#6B7280" Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Search box -->
                        <Border Grid.Column="1" CornerRadius="14" Background="#F3F4F6" Padding="12,10" Margin="16,0,0,0">
                            <DockPanel>
                                <TextBlock Text="🔎" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBox Background="Transparent"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         FontSize="14"
                                         Foreground="#111827"
                                         Text="ابحث هنا..."/>
                            </DockPanel>
                        </Border>

                        <!-- User chip -->
                        <Border Grid.Column="2" CornerRadius="14" Background="#EEF2FF" Padding="12,10" Margin="16,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👋" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Welcome" FontWeight="SemiBold" Foreground="#1F2937"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Accountant TopBar -->
                <local:AccountantsTopBar Grid.Row="1" x:Name="AccountantsTopBarControl" Visibility="Collapsed" Margin="0,14,0,0"/>

                <!-- Frame -->
                <Border Grid.Row="2"
                        Margin="0,14,0,0"
                        Background="White"
                        CornerRadius="18"
                        Effect="{StaticResource SoftShadow}">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                </Border>

            </Grid>
        </Grid>
    </Border>
</Window>
