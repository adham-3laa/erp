<Application x:Class="erp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:erp.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="Blue"
                                             SecondaryColor="Teal"/>
                <ResourceDictionary Source="Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>

            <!-- Optional: register the rest globally if you use them -->
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <conv:InitialsConverter x:Key="InitialsConverter"/>
            <conv:StatusTooltipConverter x:Key="StatusTooltipConverter"/>
            <conv:CollectionCountToVisibilityConverter x:Key="CollectionCountToVisibilityConverter"/>
            <conv:UserStatusConverter x:Key="UserStatusConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
